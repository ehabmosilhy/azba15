<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_stock_card_report" model="report.paperformat">
        <field name="name">Inventory Card Report Template</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>
    
    <record id="inventory_card_report_action_view" model="ir.actions.report">
        <field name="name">Inventory Card Report</field>
        <field name="model">inventory.card.report</field>
        <field name="binding_model_id" ref="model_inventory_card_report"/>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bi_inventory_card_report.inventory_card_report_template</field>
        <field name="report_file">bi_inventory_card_report.inventory_card_report_template</field>
        <field name="paperformat_id" ref="paperformat_stock_card_report"/>
        <field name="binding_type">report</field>
    </record>
</odoo>