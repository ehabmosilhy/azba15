<?xml version="1.0"?>
<odoo>

    <!-- Add contextual button on partner form view -->
    <record id="view_partners_form_trivial" model="ir.ui.view">
        <field name="name">view.res.partner.form.trivial</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <group>
                    <field name="english_name"/>
                    <field name="code" placeholder="Code الكود"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='street']" position="before">
                <field name="district" placeholder="District الحي"/>
            </xpath>
            <xpath expr="//field[@name='street2']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

</odoo>
