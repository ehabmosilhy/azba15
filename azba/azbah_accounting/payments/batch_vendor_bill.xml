<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- VIEWS -->

        <record id="azbah_view_batch_vendor_bill_tree" model="ir.ui.view">
            <field name="name">azbah.bach.vendor.bill.tree</field>
            <field name="model">account.batch.vendor.bill</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="delegate_id"/>
                    <field name="date"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>


        <record id="azbah_view_batch_vendor_bill_form" model="ir.ui.view">
            <field name="name">azbah.bach.vendor.bill.form</field>
            <field name="model">account.batch.vendor.bill</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="delegate_id"/>
                            <field name="date"/>
                            <field name="total"/>
                        </group>
                        <notebook>
                            <page string="Bills">
                                <!--                                <button name="duplicate_last_line" string="Duplicate Last Line" type="object"-->
                                <!--                                        icon="fa-copy"/>-->
                                <group>
                                    <field name="line_ids" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="vendor_id" widget="res_partner_many2one"/>
                                            <field name="product_id"/>
                                            <field name="quantity"/>
                                            <field name="price"/>
                                            <field name="account_id"  groups="account.group_account_readonly"
                                               options="{'no_create': True}"/>
                                            <field name="tax_ids" widget="many2many_tags"
                                               options="{'no_create': True}"
                                               optional="show"/>

                                            <field name="note"/>

                                            <field name="price_subtotal"/>

                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- ACTIONS -->

        <record id="action_azbah_view_batch_vendor_bill" model="ir.actions.act_window">
            <field name="name">Batch Vendor bills</field>
            <field name="res_model">account.batch.vendor.bill</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem parent="azbah_accounting.menu_azbah_account"
                  id="menu_azbah_action_azbah_view_batch_vendor_bill"
                  action="action_azbah_view_batch_vendor_bill"
                  groups="account.group_account_user"
                  name="ًصرف مشتريات"
                  sequence="0"/>
    </data>
</odoo>
