<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_batch_purchase_order">

            <t t-call="web.html_container">
                 <h3 style="font-family:'Odoo Unicode Support Noto'">يا مراحب</h3>
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.company_id.partner_id.lang"/>

                    <div class="page">
                        <div class="row mt32">
                            <div class="col-xs-12">
                                <h3>يا مراحب</h3>
                                <h3>يا قهلاً يا قهلاً</h3>
                            </div>
                        </div>
                        <div class="row mt16">
                            <div class="col-xs-6">
                                <p>Date:
                                    <span t-field="o.date"/>
                                </p>
                                <p>Delegate:
                                    <span t-field="o.delegate_id.name"/>
                                </p>
                            </div>
                            <div class="col-xs-6">
                                <p>Total:
                                    <span t-field="o.total"/>
                                </p>
                            </div>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Vendor</th>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Sub Total</th>
                                    <th>With Tax</th>
                                    <th>Note</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.vendor_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.product_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td>
                                            <span t-field="line.price"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
