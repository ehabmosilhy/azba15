<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_form_inherit" model="ir.ui.view">
        <field name="name">Partner Form View Inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button  type="object" name="auto_reconcile" string="Auto Reconcile" class="oe_highlight"
                        attrs="{'invisible': [('active', '=', False)]}" icon="fa-star-half-o"/>

                 <button  type="object" name="auto_reconcile_all" string="Auto Reconcile ALL" class="oe_highlight"
                        attrs="{'invisible': [('active', '=', False)]}" icon="fa-th"/>

            </div>
        </field>
    </record>
</odoo>
