<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="action_payslip_xlsx_report" model="ir.actions.report">
            <field name="name">Export to Excel</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">xlsx</field>
            <field name="report_name">az_payroll.report_payslip_xlsx</field>
            <field name="report_file">az_payroll.report_payslip_xlsx</field>
            <field name="print_report_name">'Payslip Report - %s' % (object.employee_id.name)</field>
        </record>

        <record id="action_payslip_matrix_xlsx_report" model="ir.actions.report">
            <field name="name">Export Multiple Payslips</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">xlsx</field>
            <field name="report_name">az_payroll.report_payslip_matrix_xlsx</field>
            <field name="report_file">az_payroll.report_payslip_matrix_xlsx</field>
            <field name="print_report_name">'Payslips Summary Report'</field>
        </record>
    </data>
</odoo>
