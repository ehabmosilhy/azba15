<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="azbah_customer_invoice">
        <t t-foreach="docs" t-as="o">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <t t-call="web.html_container">
                <div class="article mt0 o_report_layout_standard invoice-container">
                    <div t-field="o.name"/>

                    <div class="invoice-header">
                        <span t-field="o.name"/>
                    </div>

                    <table class="invoice-details">
                        <tr>
                            <td colspan="4" class="customer-details">
                                السادة و /
                                <t t-esc="o.partner_id.name"/>
                                - [<t t-esc="o.partner_id.code"/>]
                            </td>
                        </tr>
                        <tr>
                            <td>Invoice | رقم الفاتورة</td>
                            <td>
                                <span t-field="o.name"/>
                            </td>
                            <td>Date | التاريخ</td>
                            <td>
                                <span t-field="o.invoice_date" t-options='{"widget": "date","format": "dd-MM-yyyy"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Manual Ref | إذن التسليم</td>
                            <td>
                                <span t-field="o.manual_ref"/>
                            </td>
                            <td>Payment Method | طريقة الدفع</td>
                            <td>
                                <t t-foreach="o._get_reconciled_payments()" t-as="pay">
                                    <t t-esc="pay.journal_id.name"/>-
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>Due Date | تاريخ الإستحقاق</td>
                            <td>
                                <span t-field="o.invoice_date_due"
                                      t-options='{"widget": "date","format": "dd-MM-yyyy"}'/>
                            </td>
                            <td>Sales order | أمر البيع</td>
                            <td>
                                <span t-field="o.invoice_origin"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Reference | المرجع</td>
                            <td>
                                <span t-field="o.ref"/>
                            </td>
                            <td>VAT | الرقم الضريبي</td>
                            <td>
                                <div t-field="o.partner_id.vat"></div>
                            </td>
                        </tr>
                        <tr>
                            <td>Delivery address<br/>عنوان التوصيل
                            </td>
                            <td colspan="3">
                                <div t-field="o.partner_shipping_id"
                                     t-options='{"widget": "contact", "fields": ["address","street","street2","city","state_id","zip", "country_id"], "no_marker": True}'></div>
                            </td>
                        </tr>
                    </table>

                    <table class="items-table">
                        <tr>
                            <td colspan="7" class="invoice-title">
                                تفاصيل الفاتورة
                            </td>
                        </tr>
                        <tr class="table-header">
                            <td>Description</td>
                            <td>Qty</td>
                            <td>Sales Price</td>
                            <td>Amount</td>
                            <td>Tax %</td>
                            <td>Tax Amt.</td>
                            <td>Amt After Tax</td>
                        </tr>
                        <tr class="table-header">
                            <td>الوصف</td>
                            <td>الكمية</td>
                            <td>سعر البيع</td>
                            <td>المبلغ</td>
                            <td>نسبة الضريبة</td>
                            <td>قيمة الضريبة</td>
                            <td>الإجمالى بالضريبة</td>
                        </tr>
                        <tr t-foreach="o.invoice_line_ids" t-as="line" class="item-row">
                            <td>
                                <span t-field="line.with_context(lang='ar_001').product_id"/>
                            </td>
                            <td>
                                <span t-field="line.quantity"/>
                            </td>
                            <td>
                                <span t-field="line.price_unit"/>
                            </td>
                            <td>
                                <span t-field="line.price_subtotal"
                                      groups="account.group_show_line_subtotals_tax_excluded"/>
                                <span t-field="line.price_total"
                                      groups="account.group_show_line_subtotals_tax_included"/>
                            </td>
                            <td><span t-esc="', '.join(map(lambda x: str(x.amount), line.tax_ids))"/>%
                            </td>
                            <td>
                                <span t-field="line.amount_tax"/>
                            </td>
                            <td>
                                <t t-set="current_total_with_tax" t-value="line.amount_tax+line.price_subtotal"/>
                                <span t-esc="current_total_with_tax"/>
                            </td>
                        </tr>
                    </table>

                    <table class="total-table">
                        <tr class="total-row">
                            <td>Total before VAT<br/>الاجمالي قبل الضريبة
                            </td>
                            <td>
                                <span style="font-weight: bold" t-field="o.amount_untaxed"/>
                            </td>
                            <td>VAT amount<br/>مبلغ الضريبة
                            </td>
                            <td>
                                <span style="font-weight: bold" t-field="o.amount_tax"/>
                            </td>
                            <td>Total<br/>الاجمالي
                            </td>
                            <td>
                                <span style="font-weight: bold" t-if="o.amount_total" t-field="o.amount_total"/>
                            </td>
                        </tr>
                    </table>

                    <div class="amount-in-words">
                        <h4>
                            <span>المبلغ المطلوب
                                <span t-esc="o.currency_id.with_context(lang='en_US').amount_to_text(o.amount_total)"/>
                            </span>
                        </h4>
                    </div>

                    <div class="footer-section">
                        <span class="qr-code">
                            <div>Scan QR Code</div>
                            <t t-if="o.l10n_sa_qr_code_str">
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_sa_qr_code_str, 150, 150)"/>
                            </t>
                        </span>
                        <span>
                            <table class="bank-details">
                                <thead>
                                    <tr>
                                        <th colspan="2">Bank Details تفاصيل البنك</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Bank Name إسم البنك</td>
                                        <td>
                                            <span>مصرف الراجحى</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Account Name إسم الحساب</td>
                                        <td>
                                            <span t-field="o.company_id.partner_id"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Account number رقم الحساب</td>
                                        <td>
                                            <span>SA3080000242608010151635</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </span>
                    </div>
                </div>

                <div class="footer">
                    <p class="footer-left">
                        The invoice has been approved electronically. Any noted on the invoice within a week of its
                        date.
                    </p>
                    <p class="footer-right">
                        ملاحظة: الفاتورة معمدة إلكترونيا ولا حاجة للتوقيع أي ملاحظات على الفاتورة خلال أسبوع من تاريخها
                    </p>
                </div>
            </t>
        </t>
    </template>

    <record id="paperformat_azbah_id" model="report.paperformat">
        <field name="name">AZBAH Paper format</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">1</field>
        <field name="margin_left">5</field>
        <field name="margin_right">1</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">1</field>
        <field name="dpi">90</field>
    </record>

    <record id="report_azbah_invoice_rep" model="ir.actions.report">
        <field name="name">فاتورة ضريبية</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_file">custom_invoice_templates.azbah_customer_invoice_template</field>
        <field name="report_name">custom_invoice_templates.azbah_customer_invoice_template</field>
        <field name="paperformat_id" ref="custom_invoice_templates.paperformat_azbah_id"/>
    </record>
</odoo>
