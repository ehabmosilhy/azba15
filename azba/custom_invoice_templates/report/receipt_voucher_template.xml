<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_voucher_customer_payment">
            <t t-call="web.html_container"
            >

                <t t-foreach="docs" t-as="o">
                    <t t-call="custom_invoice_templates.azbah_external_layout_50">
                        <style>
                            @font-face {
                            font-family: 'Almarai';
                            font-style: normal;}
                            td, th {
                            border: 2px solid black;
                            text-align:center;
                            }
                        </style>


                        <br/>
                        <br/>

                        <div class="page"
                             style="direction:rtl !important;text-align:right;font-family: 'Almarai' !important; padding: 5px 10px 1px 5px; ">

                            <div class="row" style="direction:ltr !important;margin-top:20px;">
                                <div class="col-4" style="direction:ltr !important;"/>
                                <div class="col-4" style="text-align:center; font-size: 20px;direction:ltr!important;">
                                    <strong>N°</strong>
                                    <strong>
                                        <span t-field="o.name"/>
                                    </strong>
                                </div>
                            </div>

                            <br/>

                            <div>
                                <div style="direction:rtl !important;width:100% ;float: right;">


                                    <strong style="font-size: 17px !important;direction:rtl !important;margin-left:50px;white-space: nowrap ;">
                                        نقدا / شيك رقم / تحويل بنكي
                                    </strong>
                                    <span style="font-size: 17px !important;direction:rtl !important;margin-left:100px; white-space: nowrap ;"
                                          t-field="o.journal_id.name"/>

                                    <br/>
                                </div>
                                <div style="direction:ltr !important;width:100%; float: right;margin-bottom:10px;">
                                    <strong style="float:right;font-size: 17px !important;direction:ltr !important;margin-bottom:10px; white-space: nowrap ;">
                                        المندوب
                                    </strong>
                                    <span style="font-size: 20px !important;direction:ltr !important; margin-right:110px ; white-space: nowrap ; "
                                          t-field="o.delegate_id"/>
                                </div>
                            </div>

                            <br/>
                            <br/>

                            <div style="float:right;margin-top=10px;margin-bottom:10px;   direction:ltr !important;">
                                <strong style="margin-left:400px;margin-bottom:10px;margin-top:10px;">إدفعوا الى
                                </strong>
                            </div>
                            <div style="float:left; direction:ltr !important;margin-top:10px;margin-bottom:10px;">
                                <strong style="margin-bottom:10px;">
                                    Paid To
                                </strong>
                            </div>
                            <br/>
                            <br/>
                            <table style=" width: 100%;
  border-collapse: collapse;border: 1px solid black;direction:ltr !important;">

                                <thead style="direction:ltr !important;">
                                    <th width="70%" height="17%"
                                        style="border: 2px solid black;direction:ltr !important;">
                                        Mr / Messrs

                                        <br/>
                                        السيد / السادة
                                    </th>
                                    <th width="15%" height="17%"
                                        style="border: 2px solid black;direction:ltr !important;">
                                        The sum of

                                        <br/>
                                        مبلغاً وقدره
                                    </th>

                                    <th width="15%" height="17%"
                                        style="border: 2px solid black;direction:ltr !important;">
                                        For

                                        <br/>
                                        وذلك قيمة
                                    </th>
                                </thead>
                                <tbody style="direction:ltr !important;">
                                        <tr style="direction:ltr !important;">
                                            <td tyle="border: 2px solid black;direction:ltr !important;">
                                                <strong style="direction:ltr !important;">
                                                    [
                                                    <span style="direction:ltr !important;">
                                                        <span t-field="o.partner_id.code"/>
                                                    </span>
                                                    ]
                                                    <span t-field="o.partner_id.name"
                                                          style="direction:ltr !important;"/>
                                                </strong>
                                            </td>
                                            <td tyle="border: 2px solid black;direction:ltr !important;">
                                                <strong style="direction:ltr !important;">
                                                    <span t-field="o.amount" style="direction:ltr !important;"/>
                                                    <span t-field="o.currency_id"/>
                                                </strong>
                                            </td>

                                            <td tyle="border: 2px solid black;direction:ltr !important;">
                                                <strong style="direction:ltr !important;">
                                                    <span t-field="o.ref" style="direction:ltr !important;"/>
                                                </strong>
                                            </td>
                                        </tr>

                                </tbody>
                            </table>




                            <table class="table  table-borderless" style="direction:ltr !important;">

                                <td style="direction:ltr !important;">
                                    <strong style="direction:ltr !important;">Cashier</strong>
                                    <span t-field="o.delegate_id.name" style="direction:ltr !important;"/>
                                </td>
                                <td style="direction:ltr !important;">

                                    <strong style="direction:ltr !important;">المستلم</strong>
                                    <span t-esc="user.name" style="direction:ltr !important;"></span>
                                </td>
                                <td style="direction:ltr !important;">

                                    <strong style="direction:ltr !important;">Recipient</strong>
                                </td>

                            </table>

                            <div class="footer" style="direction:ltr !important;">
                                <div class="col-12">
                                    <div style="border-bottom: 1px solid black;"/>
                                </div>
                                <div class="row" style="direction:ltr;">
                                    <div class="col-12" style="text-align:center;">
                                        <span t-if="o.company_id.street">
                                            <span t-field="o.company_id.street"/>
                                        </span>
                                        <span t-if="o.company_id.street2">
                                            <span t-field="o.company_id.street2"/>
                                        </span>
                                        <span t-if="o.company_id.city">
                                            <span t-field="o.company_id.city"/>
                                        </span>
                                        <span t-if="o.company_id.zip">
                                            <span t-field="o.company_id.zip"/>
                                        </span>
                                        <span t-if="o.company_id.country_id.name">
                                            <span t-field="o.company_id.country_id.name"/>
                                        </span>
                                        <span t-if="o.company_id.phone" class="list-inline-item" direction="rtl">
                                            <i class="fa fa-phone" role="img" aria-label="Phone"
                                               title="Phone"/>
                                            <span t-field="o.company_id.phone"/>
                                        </span>
                                        <br/>
                                        <span t-if="o.company_id.email" class="list-inline-item">
                                            <i class="fa fa-at" role="img" aria-label="Email"
                                               title="Email"/>
                                            <span t-field="o.company_id.email"/>
                                        </span>
                                        <span t-if="o.company_id.website" class="list-inline-item">
                                            <i class="fa fa-globe" role="img" aria-label="Website"
                                               title="Website"/>
                                            <span t-field="o.company_id.website"/>
                                        </span>
                                    </div>
                                    <div t-if="report_type == 'pdf'" class="text-muted">

                                        <span class="page"/>

                                        <span class="topage"/>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>

        </template>
        <template id="azbah_external_layout_50">
            <div class="header" style="direction:rtl !important;">
                <div class="row" style="direction:rtl !important;">
                    <div class="col-4" style="font-size: 30px;direction:rtl !important;">
                        <center style="direction:ltr !important;">
                            <br/>
                            <strong style="direction:rtl !important;">التاريخ</strong>
                            <span t-field="o.date" style="direction:rtl !important;"/>
                            <strong style="direction:v !important;">Date</strong>
