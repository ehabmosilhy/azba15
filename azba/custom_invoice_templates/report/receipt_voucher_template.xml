        <template id="report_print_voucher">
            <t t-foreach="docs" t-as="o">
                <t t-if="o.payment_type == 'outbound'">
                    <t t-call="custom_invoice_templates.report_voucher_customer_payment">
                    </t>
                </t>
                <t t-if="o.payment_type == 'inbound'">
                    <t t-call="custom_invoice_templates.report_voucher_vendor_payment">
                    </t>
                </t>
                <t t-if="o.payment_type == 'transfer'">
                    <t t-call="custom_invoice_templates.report_voucher_transfer">
                    </t>
                </t>
            </t>
