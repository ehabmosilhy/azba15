<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="internal_layout">
        <div class="article">
            <link
                    href="/all_product_history/static/src/css/report.css"
                    rel="stylesheet"
            />
            <t t-out="0"/>
        </div>
        <div class="footer">
            <div class="row">
                <div class="col-6 custom_footer">
                    <span
                            t-out="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                </div>
                <div class="col-6 text-right custom_footer">
                    <span class="page"/>/
                    <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="report_buttons">
        <div class="button_row">
            <button class="o_all_product_history_print btn btn-sm oe_button"><span
                    class="fa fa-print"
            />Print
            </button>
            <button class="o_all_product_history_export btn btn-sm oe_button"><span
                    class="fa fa-download"
            />Export
            </button>
        </div>
    </template>

    <template id="report_all_product_history_html">
        <div class="o_all_product_history_page">
            <t t-call="all_product_history.report_buttons"/>
            <t t-call="all_product_history.report_all_product_history_base"/>
        </div>
    </template>

    <template id="report_all_product_history_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="all_product_history.internal_layout">
                    <t t-call="all_product_history.report_all_product_history_base"/>
                </t>
            </t>
        </t>
    </template>

    <template id="report_all_product_history_base">
        <t t-foreach="o.product_ids" t-as="product">
            <div class="page">
                <div class="row">
                    <t t-set="title">[<t t-out="product.product_tmpl_id.code"/>]
                        <t t-out="product.name"/>
                    </t>
                    <h4 class="mt0" t-out="title" style="text-align: center;"/>
                </div>
                <!-- Display filters -->
                <t t-call="all_product_history.report_all_product_history_filters"/>
                <!-- Display All Product History -->
                <div class="act_as_table data_table mt4" style="width: 100%;">
                    <!-- Display header line-->
                    <t t-call="all_product_history.report_all_product_history_lines_header"/>
                    <t t-set="product_line" t-value="o.results.filtered(lambda l: l.product_id == product)"/>
                    <div class="act_as_row lines">
                        <div class="act_as_cell right">
                            <t t-out="'{0:,.3f}'.format(product_line.initial_balance)"/>
                        </div>
                        <div class="act_as_cell right">
                            <t t-if="product_line.product_in">
                                <t t-out="'{0:,.3f}'.format(product_line.product_in)"/>
                            </t>
                        </div>
                        <div class="act_as_cell right">
                            <t t-if="product_line.product_out">
                                <t t-out="'{0:,.3f}'.format(product_line.product_out)"/>
                            </t>
                        </div>
                        <div class="act_as_cell right">
                            <t t-out="'{0:,.3f}'.format(product_line.balance)"/>
                        </div>
                    </div>
                </div>
                <p style="page-break-before:always;"/>
            </div>
        </t>
    </template>

    <template id="report_all_product_history_filters">
        <div class="act_as_table data_table" style="width: 100%;">
            <div class="act_as_row labels">
                <div class="act_as_cell">Date From</div>
                <div class="act_as_cell">Date To</div>
            </div>
            <div class="act_as_row">
                <div class="act_as_cell">
                    <span t-field="o.date_from"/>
                </div>
                <div class="act_as_cell">
                    <span t-field="o.date_to"/>
                </div>
            </div>
        </div>
    </template>

    <template id="report_all_product_history_lines_header">
        <div class="act_as_thead">
            <div class="act_as_row labels">
                <div class="act_as_cell">Initial Balance</div>
                <div class="act_as_cell">Input</div>
                <div class="act_as_cell">Output</div>
                <div class="act_as_cell">Final Balance</div>
            </div>
        </div>
    </template>

    <record id="action_report_all_product_history_html" model="ir.actions.client">
        <field name="name">All Product History</field>
        <field name="tag">all_product_history_report_html</field>
        <field name="context" eval="{'active_model': 'report.all.product.history'}"/>
    </record>

    <record id="action_report_all_product_history_pdf" model="ir.actions.report">
        <field name="name">All Product History PDF</field>
        <field name="model">report.all.product.history</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">all_product_history.report_all_product_history_pdf</field>
        <field name="report_file">all_product_history.report_all_product_history_pdf</field>
    </record>

</odoo>
