<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the form view to add zatca_response_log -->
        <record id="view_move_form_inherit_zatca" model="ir.ui.view">
            <field name="name">account.move.form.inherit.zatca</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@id='edi_documents']" position="inside">
                    <group>
                        <field name="zatca_response_log" readonly="1" attrs="{'invisible': [('zatca_response_log', '=', False)]}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Inherit the form view to restrict EDI messages to developer mode -->
        <record id="view_move_form_inherit_zatca_edi_messages" model="ir.ui.view">
            <field name="name">account.move.form.inherit.zatca.edi.messages</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Add groups attribute to all EDI alert messages -->
                <xpath expr="//div[hasclass('alert-info')][1]" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </xpath>
                <xpath expr="//div[hasclass('alert-danger')]" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </xpath>
                <xpath expr="//div[hasclass('alert-warning')]" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </xpath>
                <xpath expr="//div[hasclass('alert-info')][2]" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </xpath>
                <!-- Also restrict EDI state field to developer mode -->
                <xpath expr="//field[@name='edi_state']" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit tree views to restrict EDI state to developer mode -->
        <record id="view_out_invoice_tree_inherit_zatca" model="ir.ui.view">
            <field name="name">account.move.tree.inherit.zatca</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='edi_state']" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_out_credit_note_tree_inherit_zatca" model="ir.ui.view">
            <field name="name">account.move.tree.inherit.zatca.credit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_credit_note_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='edi_state']" position="attributes">
                    <attribute name="groups">base.group_no_one</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>