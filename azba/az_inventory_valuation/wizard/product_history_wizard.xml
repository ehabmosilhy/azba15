<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_history_wizard_form" model="ir.ui.view">
        <field name="name">product.history.wizard.form</field>
        <field name="model">product.history.wizard</field>
        <field name="arch" type="xml">
            <form string="Product History">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="get_product_history" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
                <group attrs="{'invisible': [('report_file', '=', False)]}">
                    <field name="report_file" filename="report_filename" readonly="1"/>
                    <button string="Download Report" type="object" name="download_report" class="btn-primary"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_product_history_wizard" model="ir.actions.act_window">
        <field name="name">All-Product History</field>
        <field name="res_model">product.history.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_product_history_wizard"
              name="All-Product History"
              action="action_product_history_wizard"
              parent="stock.menu_warehouse_report"
              sequence="8"/>
</odoo>
