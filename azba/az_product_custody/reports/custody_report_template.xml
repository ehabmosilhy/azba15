<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custody_report_pdf_template">
            <t t-call="web.html_container">
                <div class="article" t-att-data-oe-model="docs and docs._name"
                     t-att-data-oe-id="docs and docs.id"
                     t-att-data-oe-lang="docs and docs.env.context.get('lang')">
                    <h2>Custody Report</h2>
                    <p>
                        <strong>Date from:</strong>
                        <t t-esc="wizard['start_date']"/>
                    </p>
                    <p>
                        <strong>Date to:</strong>
                        <t t-esc="wizard['end_date']"/>
                    </p>
                    <p>
                        <strong>Location:</strong>
                        <t t-esc="wizard['location_id']"/>
                    </p>
                    <t t-if="wizard['partner_id']">
                        <p>
                            <strong>Partner:</strong>
                            <t t-esc="wizard['partner_id']"/>
                        </p>
                        <h3>Detailed Transactions</h3>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Picking Name</th>
                                    <th>Previous Balance</th>
                                    <th>Quantity Out</th>
                                    <th>Quantity In</th>
                                    <th>End Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="current_product" t-value="None"/>
                                <t t-foreach="data" t-as="item">
                                    <t t-if="current_product != item['product']">
                                        <tr>
                                            <td colspan="6" style="font-weight: bold; background-color: #f2f2f2;">
                                                <t t-esc="item['product']"/>
                                            </td>
                                        </tr>
                                        <t t-set="current_product" t-value="item['product']"/>
                                    </t>
                                    <tr t-attf-class="#{ 'highlight' if current_product == item['product'] else '' }">
                                        <td>
                                            <t t-esc="item['date']"/>
                                        </td>
                                        <td>
                                            <t t-esc="item['picking_name']"/>
                                        </td>
                                        <td>
                                            <t t-esc="item['previous_balance']"/>
                                        </td>
                                        <td>
                                            <t t-esc="item['quantity_out']"/>
                                        </td>
                                        <td>
                                            <t t-esc="item['quantity_in']"/>
                                        </td>
                                        <td>
                                            <t t-esc="item['end_balance']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                    <t t-else="">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Partner</th>
                                    <th>Product</th>
                                    <th>Sum Out</th>
                                    <th>Sum In</th>
                                    <th>Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="data" t-as="item">
                                    <tr>
                                        <td>
                                            <t t-esc="item['partner']"/>
                                        </td>
                                        <td>
                                            <t t-esc="item['product']"/>
                                        </td>
                                        <td>
                                            <t t-esc="item['out']"/>
                                        </td>
                                        <td>
                                            <t t-esc="item['in']"/>
                                        </td>
                                        <td>
                                            <t t-esc="item['balance']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>
