<odoo>

    <record id="paperformat_commission" model="report.paperformat">
        <field name="name">commission Report</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="commission_report_pdf_action" model="ir.actions.report">
        <field name="name">POS Commission Report</field>
        <field name="model">pos.commission.wizard</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">az_pos_commission.commission_report_pdf_template</field>
        <field name="report_file">az_pos_commission.commission_report_pdf_template</field>
        <field name="print_report_name">'POS Commission Report - %s' % (object.name)</field>
        <field name="paperformat_id" ref="paperformat_commission"/>
        <field name="attachment_use">False</field>
    </record>

</odoo>
