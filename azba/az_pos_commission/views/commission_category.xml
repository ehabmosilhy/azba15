<odoo>
    <record id="view_commission_category_tree" model="ir.ui.view">
        <field name="name">commission.category.tree</field>
        <field name="model">az.commission.category</field>
        <field name="arch" type="xml">
            <tree string="category commissions">
                <field name="name"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="view_commission_category_form" model="ir.ui.view">
        <field name="name">commission.category.form</field>
        <field name="model">az.commission.category</field>
        <field name="arch" type="xml">
            <form string="category commissions">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_commission_category" model="ir.actions.act_window">
        <field name="name">Commission Categories</field>
        <field name="res_model">az.commission.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first category commission
            </p>
        </field>
    </record>

    <menuitem id="menu_commission_category" name="فئات العمولة🔠"
              parent="point_of_sale.pos_config_menu_catalog" action="action_commission_category"
              groups="base.group_system,base.group_user"
              sequence="150"
    />

</odoo>
