<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_fleet_service">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Vehicle Service Report</h2>
                        
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Vehicle:</strong>
                                <span t-field="doc.vehicle_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Date:</strong>
                                <span t-field="doc.date"/>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <strong>Service Types:</strong>
                                <ul class="list-unstyled">
                                    <t t-foreach="doc.service_type_id" t-as="service_type">
                                        <li><span t-field="service_type.name"/></li>
                                    </t>
                                </ul>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6">
                                <strong>Odometer:</strong>
                                <span t-field="doc.odometer"/>
                            </div>
                            <div class="col-6">
                                <strong>Vendor:</strong>
                                <span t-field="doc.vendor_id.name"/>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <strong>Description:</strong>
                                <p t-field="doc.description"/>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Cost:</strong>
                                <span t-field="doc.amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </div>
                            <div class="col-6">
                                <strong>Purchaser:</strong>
                                <span t-field="doc.purchaser_id.name"/>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <strong>Notes:</strong>
                                <p t-field="doc.notes"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
