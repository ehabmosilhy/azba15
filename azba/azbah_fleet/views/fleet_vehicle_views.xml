<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit Tree View -->
    <record id="fleet_vehicle_service_types_view_tree_inherited" model="ir.ui.view">
        <field name="name">fleet.service.type.tree.inherited</field>
        <field name="model">fleet.service.type</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_service_types_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="code"/>
            </xpath>
        </field>
    </record>

    <record id="fleet_vehicle_log_services_form_view_inherited" model="ir.ui.view">
        <field name="name">fleet.vehicle.log.services.form.inherited</field>
        <field name="model">fleet.vehicle.log.services</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_done" 
                        string="Mark as Done" 
                        type="object" 
                        class="oe_highlight"
                        attrs="{'invisible': [('state', '=', 'done')]}"/>
            </xpath>
            <xpath expr="//field[@name='service_type_id']" position="attributes">
                <attribute name="widget">many2many_tags</attribute>
            </xpath>
        </field>
    </record>

    <record id="fleet_vehicle_log_services_tree_view_inherited" model="ir.ui.view">
        <field name="name">fleet.vehicle.log.services.tree.inherited</field>
        <field name="model">fleet.vehicle.log.services</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_tree"/>
        <field name="arch" type="xml">
            <field name="service_type_id" position="replace">
                <field name="service_type_id" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>