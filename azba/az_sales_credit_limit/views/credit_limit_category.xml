<odoo>
    <record id="view_credit_limit_category_tree" model="ir.ui.view">
        <field name="name">credit.limit.category.tree</field>
        <field name="model">credit.limit.category</field>
        <field name="arch" type="xml">
            <tree string="Credit Limit Categories">
                <field name="name"/>
                <field name="credit_limit"/>
            </tree>
        </field>
    </record>

    <record id="view_credit_limit_category_form" model="ir.ui.view">
        <field name="name">credit.limit.category.form</field>
        <field name="model">credit.limit.category</field>
        <field name="arch" type="xml">
            <form string="Credit Limit Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="credit_limit"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_credit_limit_category" model="ir.actions.act_window">
        <field name="name">Credit Limit Categories</field>
        <field name="res_model">credit.limit.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_credit_limit_category"
              name="Credit Limit Categories"
              action="action_credit_limit_category"
              parent="sale.menu_sale_config"
              sequence="10"/>
</odoo>