<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_history_wizard_form" model="ir.ui.view">
        <field name="name">product.history.wizard.form</field>
        <field name="model">product.history.wizard</field>
        <field name="arch" type="xml">
            <form string="Product History">
                <group>
                    <field name="product_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="warehouse_id"/>
                </group>
                <footer>
                    <button name="action_view_report" string="View Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_history_wizard" model="ir.actions.act_window">
        <field name="name">Product History with Initial Balance</field>
        <field name="res_model">product.history.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_product_history_wizard"
        name="Product History with Initial Balance"
        parent="stock.menu_warehouse_report"
        action="action_product_history_wizard"
        sequence="150"/>
</odoo>
