<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_report" model="ir.ui.view">
        <field name="name">Purchase Report</field>
        <field name="model">wiz.purchase.report</field>
        <field name="arch" type="xml">
            <form string="Choose your date">
                <group>
                    <group>
                        <field name="department_id"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="check_report" string="طباعة" type="object" class="btn-primary"/>
                    <button string="إلغاء" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_purchase_report" model="ir.actions.act_window">
        <field name="name">التقرير حسب الادارة</field>
        <field name="res_model">wiz.purchase.report</field>
        <!--<field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_purchase_report"/>
        <field name="target">new</field>
    </record>
    <menuitem id="nauss_menu_reporting" name="التقارير"  groups="ejad_erp_purchase.group_purchase_reports_menu" parent="purchase.menu_purchase_root" sequence="99"/>

    <menuitem id="menu_nacsu_purchase_report" name="تقارير المشتريات" parent="nauss_menu_reporting" sequence="2"/>
    <menuitem id="menu_purchase_report" name="التقرير حسب الادارة" parent="menu_nacsu_purchase_report"
              action="action_purchase_report"/>
</odoo>

