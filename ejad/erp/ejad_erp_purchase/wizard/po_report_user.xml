<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_po_user_report" model="ir.ui.view">
        <field name="name">Purchase Report</field>
        <field name="model">wiz.po.user</field>
        <field name="arch" type="xml">
            <form string="Choose your date">
                <group>
                    <group>
                        <field name="user_id"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="check_report" string="طباعة" type="object" class="btn-primary"/>
                    <button string="إلغاء" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_po_user_report" model="ir.actions.act_window">
        <field name="name">التقرير حسب مندوب المشتريات</field>
        <field name="res_model">wiz.po.user</field>
        <!--<field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_po_user_report"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_po_user_report" name="التقرير حسب مندوب المشتريات" parent="menu_nacsu_purchase_report" action="action_po_user_report"/>
</odoo>

