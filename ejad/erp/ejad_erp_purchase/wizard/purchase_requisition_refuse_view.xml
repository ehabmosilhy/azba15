<?xml version="1.0"?>
<odoo>
        <record id="purchase_requisition_refuse_view_form" model="ir.ui.view">
            <field name="name">purchase.requisition.refuse.form</field>
            <field name="model">purchase.requisition.refuse</field>
            <field name="arch" type="xml">
                <form string="Refuse Reason">
                    <separator string="سبب الرفض"/>
                    <group>
                        <field name="refuse_reason_id"/>
                        <field name="refuse_reason"/>
                    </group>


                    <footer>
                        <button name="action_refuse_reason_apply" string="تأكيد" type="object" class="btn btn-sm btn-primary"/>
                        <button string="إلغاء" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="purchase_requisition_refuse_action" model="ir.actions.act_window">
            <field name="name">سبب الرفض</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.requisition.refuse</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase_requisition_refuse_view_form"/>
            <field name="target">new</field>
        </record>
</odoo>
