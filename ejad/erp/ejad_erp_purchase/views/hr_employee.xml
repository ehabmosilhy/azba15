<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="action_employee_products_request" model="ir.actions.act_window">
            <field name="name">طلبات مواد</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.requisition.request</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_request_type': 'product',
                'search_default_employee_id': [active_id],
                'default_employee_id': active_id,
                'search_default_group_by_state': 1}
            </field>
            <field name="help">employee Products Request</field>
            <field name="domain">[('employee_id','=',active_id)]</field>
        </record>


        <record id="view_hr_empployee_inherit1" model="ir.ui.view">
            <field name="name">hr.employee.inherit.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[1]" position="inside">
                    <button class="oe_stat_button" name="%(action_employee_products_request)d"
                             type="action"
                             icon="fa-info">
                             <field string="طلبات المواد" name="employee_requset_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>



    </data>
</openerp>
