    <record model="ir.ui.view" id="product_category_form_view_inherit_nauss">
        <field name="name">product.category.view.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='first']" position="after">
                <group>
                    <field name="request_type" class="oe_inline"/>
                    <field name="department_id" class="oe_inline"/>
                    <field name="security_group_id" class="oe_inline"/>
                </group>
            </xpath>
            <xpath expr="//div[@class='oe_title']" position="replace">
                <div class="oe_title">
                    <label for="name" string="إسم الفئة" class="oe_edit_only"/>
                    <h1><field name="name" placeholder="مثال. أجهزة إلكترونية"/></h1>
                </div>
            </xpath>
        </field>
    </record>

