    <record model="ir.ui.view" id="product_template_view_inherit_assert">
        <field name="name">product.template.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="is_assert" attrs="{'invisible':[('type','not in',['product'])]}"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="nauss_view_template_property_form">
        <field name="name">template.property.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='traceability']" position="replace">
                <group string="التتبع" name="traceability" groups="stock.group_production_lot">
                    <field name="tracking" string="طريقة التتبع" widget="radio" attrs="{'invisible':[('type', 'in', ['service', 'digital'])]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="nauss_product_template_form_view_inherit_notebook">
        <field name="name">product.template.view.inherit.notebook</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="attributes">
                <attribute name="groups">
                    product.group_product_pricelist
                </attribute>
            </xpath>
        </field>
    </record>

