<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase.requisition.request</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='po_lock']" position="after">
                <h2>طلبات وعمليات الشراء</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="default_max_amount"/>
                            <div class="text-muted">أدخل المبلغ الأقصى للشراء المباشر</div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="default_max_amount" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="default_pr_max_amount"/>
                            <div class="text-muted">أدخل المبلغ الذي يحتاج موافقة اللجنة</div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="default_pr_max_amount" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
