<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <delete id="purchase_stock.report_purchaseorder_document" model="ir.ui.view"/>

    <template id="purchase.report_purchaseorder_document">
        <div class="header">
        </div>
        <t t-call="web.internal_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <div class="page">
                <div class="oe_structure"/>
                <h2 t-if="o.state != 'draft'">Purchase Order Confirmation #
                    <span t-field="o.name"/>
                </h2>
                <h2 t-if="o.state == 'draft'">Request for Quotation #
                    <span t-field="o.name"/>
                </h2>

                <div class="row">
                    <div class="col-xs-6">
                        <div style=" text-align: right;" t-field="o.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>:
                            <span t-field="o.partner_id.vat"/>
                        </p>
                    </div>

                    <div class="col-xs-6">
                        <strong>Shipping address:</strong>
                        <div style=" text-align: right;" t-if="o.dest_address_id">
                            <div t-field="o.dest_address_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>

                        <div style=" text-align: right;"
                             t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                            <span t-field="o.picking_type_id.warehouse_id.name"/>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </div>
                </div>


                <div class="row mt32 mb32 text-right" style="direction:rtl">
                    <div style="text-align: right;" t-if="o.name" class="col-xs-3">
                        <strong>Our Order Reference:</strong>
                        <p t-field="o.name"/>
                    </div>
                    <div style="text-align: right;" t-if="o.partner_ref" class="col-xs-3">
                        <strong>Your Order Reference:</strong>
                        <p t-field="o.partner_ref"/>
                    </div>
                    <div style="text-align: right;" t-if="o.date_order" class="col-xs-3">
                        <strong>Order Date:</strong>
                        <p t-field="o.date_order"/>
                    </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center">
                                <strong>Description</strong>
                            </th>
                            <th class="text-center">
                                <strong>Taxes</strong>
                            </th>
                            <th class="text-center">
                                <strong>Date Req.</strong>
                            </th>
                            <th class="text-center">
                                <strong>Qty</strong>
                            </th>
                            <th class="text-center">
                                <strong>Unit Price</strong>
                            </th>
                            <th class="text-center">
                                <strong>Amount</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="line">
                            <td>
                                <span t-field="line.name"/>
                            </td>
                            <td>
                                <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.date_planned"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.product_qty"/>
                                <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.price_unit"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.price_subtotal"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td>
                                    <strong>Subtotal</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td>
                                    <strong>Total</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_total"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <p t-field="o.notes"/>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>


</odoo>
