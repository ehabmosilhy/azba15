<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <delete id="purchase_stock.report_purchasequotation_document"  model="ir.ui.view"/>

    <template id="purchase.report_purchasequotation_document">
        <div class="header">
        </div>
        <t t-call="web.internal_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <div class="page">
                <div class="oe_structure"/>
                <h2>Request for Quotation
                    <span t-field="o.name"/>
                </h2>

                <div class="row mt32 mb32">
                    <div style=" text-align: right;" class="col-xs-5 col-xs-offset-1">
                        <div t-field="o.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>:
                            <span t-field="o.partner_id.vat"/>
                        </p>
                    </div>
                    <div class="col-xs-6">
                        <strong>Shipping address:</strong>
                        <div style=" text-align: right;" t-if="o.dest_address_id">
                            <div t-field="o.dest_address_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                        <div style=" text-align: right;"
                             t-if="not o.dest_address_id and o.picking_type_id.warehouse_id">
                            <span t-field="o.picking_type_id.warehouse_id.name"/>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </div>

                </div>


                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>
                                <strong>Description</strong>
                            </th>
                            <th class="text-center">
                                <strong>Expected Date</strong>
                            </th>
                            <th class="text-center">
                                <strong>Qty</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="order_line">
                            <td>
                                <span t-field="order_line.name"/>
                            </td>
                            <td class="text-center">
                                <span t-field="order_line.date_planned"/>
                            </td>
                            <td class="text-center">
                                <span t-field="order_line.product_qty"/>
                                <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <p t-field="o.notes"/>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>


</odoo>
    
