<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_user">
        <t t-call="web.html_container">
            <!--<t t-call="ejad_erp_purchase.nauss_header"/>-->
            <!--<t t-call="ejad_erp_purchase.nauss_footer"/>-->
            <div class="header">
            </div>

            <t t-call="web.internal_layout">
                <div class="page">
                    <h3>طلبات الشراء بواسطة
                        <strong>
                            <span t-esc="data['user_id'][1]"/>
                        </strong>
                    </h3>
                    <div>
                        <t t-if="data['date_from']">
                            <strong>من</strong>
                            <span t-esc="data['date_from']"/>
                        </t>
                        <t t-if="data['date_to']">
                            <strong>الى</strong>
                            <span t-esc="data['date_to']"/>
                        </t>
                    </div>
                    <br/>
                    <table t-if="len(lines)" class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">رقم الطلب</th>
                                <th class="text-center">تاريخ الطلب</th>
                                <th class="text-center">الموظف</th>
                                <th class="text-center">الحالة</th>
                                <th class="text-center">الإجمالي</th>
                            </tr>
                        </thead>
                        <tr t-foreach="lines" t-as="line">
                            <td>
                                <span t-esc="line.name"/>
                            </td>
                            <td>
                                <span t-esc="line.date"/>
                            </td>
                            <td>
                                <span t-esc="line.employee_id.name"/>
                            </td>
                            <td>
                                <span t-esc="line.state"/>
                            </td>
                            <td>
                                <span t-esc="line.total_amount"
                                      t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
