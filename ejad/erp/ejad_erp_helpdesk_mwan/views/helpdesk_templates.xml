<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="ticket_submit" name="Helpdesk: Submit a Ticket with autofile property"
                  inherit_id="website_helpdesk_form.ticket_submit_form">
            <!-- add Attributes       -->
<!--            <xpath expr="//div[@id='wrap']" position="replace">-->
            <xpath expr="//div[hasclass('container')]" position="replace">
                <t t-call="website.layout">
                    <h2 t-if="team" class="text-center text-muted">
                        <span><t t-esc="team.name"/></span>
                    </h2>
                    <div id="wrap" class="oe_structure oe_empt">
                        <div class="container">
                            <div class="row">
                                <section id="forms" class="col-12 s_website_form" data-vcss="001" data-snippet="s_website_form">
                                    <span class="hidden" data-for="helpdesk_ticket_form" t-att-data-values="{'partner_name': default_values.get('name', ''), 'partner_email': default_values.get('email', ''), 'team_id': team and team.id or False}" />
                                    <form id="helpdesk_ticket_form" action="/website/form/" method="post" class="s_website_form container-fluid mt32" enctype="multipart/form-data" data-model_name="helpdesk.ticket" data-success_page="/your-ticket-has-been-submitted" data-editable-form="false"  hide-change-model="true">
                                        <div class="form-group row form-field o_website_form_required">
                                            <div class="col-lg-3 col-md-4 text-right">
                                                <label class="col-form-label" for="description">Request Name</label>
                                            </div>
                                            <div class="col-lg-7 col-md-8">
                                                <input class="form-control o_website_form_input" name="name" required="1"/>
                                            </div>
                                        </div>
                                        <div class="form-group row form-field">
                                            <div class="col-lg-3 col-md-4 text-right">
                                                <label class="col-form-label" for="description">Description</label>
                                            </div>
                                            <div class="col-lg-7 col-md-8">
                                                <textarea class="form-control o_website_form_input" name="description" maxlength="260"/>
                                            </div>
                                        </div>
                                        <div class="form-group row form-field">
                                            <div class="col-lg-3 col-md-4 text-right">
                                                <label class="col-form-label" for="attachments">Attachment(s)</label>
                                            </div>
                                            <div class="col-lg-7 col-md-8">
                                                <input type="file" name="attachments" class="form-control o_website_form_input" multiple="true" accept="image/*,application/pdf,video/*"/>
                                            </div>
                                        </div>
                                        <div class="form-group row form-field d-none">
                                            <div class="col-lg-3 col-md-4">
                                                <label class="col-form-label" for="team_id">Team</label>
                                            </div>
                                            <div class="col-lg-7 col-md-8">
                                                <input type="hidden" class="form-control o_website_form_input" name="team_id"/>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                                <button type="submit" class="btn btn-primary btn-lg o_website_form_send o_default_snippet_text">Send</button>
                                                <span id="o_website_form_result"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row form-field">
                                            <div class="col-lg-7 col-md-8">
                                                <input type="hidden" class="form-control o_website_form_input" t-att-value="request.env.user.partner_id.name" name="partner_name"/>
                                            </div>
                                        </div>
                                        <div class="form-group row form-field">
                                            <div class="col-lg-7 col-md-8">
                                                <input type="hidden" class='form-control o_website_form_input' t-att-value="request.env.user.partner_id.email" name="partner_email"/>
                                            </div>
                                        </div>
                                    </form>
                                </section>
                            </div>
                        </div>
                    </div>
               </t>
            </xpath>

        </template>

        <template id="sub_ticket_type_submit" name="Helpdesk: Submit a Ticket with autofile property"
                  inherit_id="ejad_erp_helpdesk.sub_ticket_type_submit" priority="30">
            <xpath expr="//input[@name='personal_id']" position="attributes">
                <attribute name="t-att-value">request.env.user.partner_id.personal_id</attribute>
                <attribute name="type">hidden</attribute>
            </xpath>
            <xpath expr="//input[@name='mobile']" position="attributes">
                <attribute name="t-att-value">request.env.user.partner_id.mobile</attribute>
                  <attribute name="type">hidden</attribute>
            </xpath>
            <xpath expr="//label[@for='personal_id']" position="replace">
            </xpath>
            <xpath expr="//label[@for='mobile']" position="replace">
            </xpath>

        </template>

        <template id="submit_to_ticket_btn" name="Remove Submit Ticket Button" inherit_id="ejad_erp_helpdesk.submit_to_ticket_btn">
            <xpath  expr="//a[@id='query-ticket']" position="replace">

            </xpath>
        </template>
    </data>
</odoo>