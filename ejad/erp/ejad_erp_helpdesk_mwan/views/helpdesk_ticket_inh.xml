<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- add field ticket_type_line_id to helpdesk.ticket for view        -->
        <record id="entity_type_field_ticket_view_form" model="ir.ui.view">
            <field name="name">entity.type.field</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="entity_type"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="create_date" string="Ticket Date"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="region"/>
                    <field name="person_name" attrs="{'invisible': [('entity_type', '=', 'person')]}"/>
<!--                    <field name="tax_reg_no" attrs="{'invisible': [('entity_type', '!=', 'company')]}"/>-->
                    <field name="commercial_reg_no" string="Commercial registration No" attrs="{'invisible': [('entity_type', '!=', 'company')]}"/>
                    <field name="personal_id" attrs="{'invisible': [('entity_type', '!=', 'person')]}"/>
                </xpath>
                 <xpath expr="//field[@name='partner_phone']" position="attributes">
                      <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='email_cc']" position="attributes">
                      <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//field[@name='description']" position="replace">
                     <group>
                          <field name="description"/>
                     </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>