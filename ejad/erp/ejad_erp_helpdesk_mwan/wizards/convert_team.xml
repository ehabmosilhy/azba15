<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--        New Wizard For Replace Team Windows-->
        <record id="view_convert_team_wizard_form" model="ir.ui.view">
            <field name="name">helpdesk.convert.team.form</field>
            <field name="model">helpdesk.convert.team</field>
            <field name="arch" type="xml">
                <form string="Convert Team">
                    <sheet>
                        <group>
                            <group>
                                <field name="all_teams"/>
                                <field name="team_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="stage_id"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string='Convert' name="action_convert_team" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>

            </field>
        </record>

        <record id="action_convert_team_wizard" model="ir.actions.act_window">
            <field name="name">Convert Team</field>
            <field name="res_model">helpdesk.convert.team</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_convert_team_wizard_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>