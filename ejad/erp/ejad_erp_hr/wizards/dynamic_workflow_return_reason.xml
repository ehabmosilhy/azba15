<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    end of service-->
    <record id="endofservice_return_wizard_view_form" model="ir.ui.view">
        <field name="name">dynamic.workflowendofservice.return.wizard.form</field>
        <field name="model">dynamic.workflowendofservice.return.wizard</field>
        <field name="arch" type="xml">
            <form string="Request return reason">
                <label string="Reason to return the request" for="return_reason"/>
                <field name="return_message"/>
                <footer>
                    <button string='Return to Draft' name="return_reason" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>
    <record id="endofservice_return_wizard_action" model="ir.actions.act_window">
        <field name="name">Return Request</field>
        <field name="res_model">dynamic.workflowendofservice.return.wizard</field>

        <field name="view_mode">form</field>
        <field name="view_id" ref="endofservice_return_wizard_view_form"/>
        <field name="target">new</field>
    </record>

