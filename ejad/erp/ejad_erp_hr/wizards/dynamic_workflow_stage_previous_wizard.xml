<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!--    Contract-->
    <record id="contract_stage_previous_wizard_form" model="ir.ui.view">
        <field name="name">Dynamic Workflow Stage Previous</field>
        <field name="model">dynamic.workflow.contract.stage.previous.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="contract_id" invisible="1"/>
                    <field name="stage_id" /> <!--groups="ejad_erp_hr.user_can_chose_previous_stage"-->
                    <field name="return_reason"/>
                </group>
                <footer>
                    <button name="action_previous" string="تسجيل" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

