<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="leave_refuse_wizard_view_form" model="ir.ui.view">
        <field name="name">leave.refuse.wizard.form</field>
        <field name="model">leave.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Leave refuse reason">
                <label string="اكتب سبب رفض الطلب" for="refuse_reason"/>
                <field name="refuse_message"/>
                <footer>
                    <button string='رفض الطلب' name="refuse_reason" type="object" class="oe_highlight"/>
                    او
                    <button string="إلغاء" class="oe_link" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>
    <record id="leave_refuse_wizard_action" model="ir.actions.act_window">
        <field name="name">رفض الطلب</field>
        <field name="res_model">leave.refuse.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="leave_refuse_wizard_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>