<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_mandate_payment_wizard_form" model="ir.ui.view">
            <field name="name">mandate.payment.wizard.form</field>
            <field name="model">mandate.payment.wizard</field>
            <field name="arch" type="xml">
                <form string="Mandate Payment">
                    <!--<header>-->
                    <!--<button icon="fa-check-square-o" string="Validate" name="save" type="object"-->
                    <!--class="oe_highlight"/>-->
                    <!--</header>-->
                    <sheet>
                        <group>
                            <group>
                                <field name="mandate_request_id" invisible="1"/>
                                <field name="payment_date"/>

                            </group>
                            <group>
                                <field name="journal_id" invisible="1"/>

                            </group>

                        </group>
                    </sheet>
                    <footer>
                        <button string='Validate' name="action_validate_mandate_payment" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>

                </form>

            </field>
        </record>

        <record id="action_mandate_payment_wizard" model="ir.actions.act_window">
            <field name="name">Mandate Payment</field>
            <field name="res_model">mandate.payment.wizard</field>

            <field name="view_mode">form</field>
            <field name="view_id" ref="view_mandate_payment_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>