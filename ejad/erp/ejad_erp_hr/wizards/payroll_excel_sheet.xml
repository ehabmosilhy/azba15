<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id='wizard_payroll_excel_form'  model='ir.ui.view'>
            <field name="name">wizard.payroll.excel.form</field>
            <field name="model">payroll.excel.sheet.wizard</field>
            <field name="arch" type="xml">
                <form string="تصدير الرواتب إلى اكسل">
                        <group string="Warehouse">

                            <field name="payslip_batch_id" invisibile="0"/>
                            <field name="employees_to_show" widget="radio"/>
                        </group>
                    <footer>
                        <button name="export_xls" type="object" default_focus="1"
                                string="تصدير" class="oe_highlight"
                                context="{'xls_export':1}" icon="fa-download"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record model='ir.actions.act_window' id='wizard_payroll_excel_export_action'>
            <field name="name">تصدير الرواتب إلى اكسل</field>
            <field name="res_model">payroll.excel.sheet.wizard</field>

            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_payroll_excel_form"/>
            <field name="target">new</field>
        </record>
        <report
            id="payroll_excel_sheet"
            model="hr.payslip.run"
            string="report"
            report_type="xlsx"
            name="ejad_erp_hr.payroll_excel_xlsx"
            file="الرواتب"
            attachment_use="False"
            menu="False"
        />


    </data>

</odoo>