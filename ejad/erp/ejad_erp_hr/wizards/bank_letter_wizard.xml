<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_bank_letter_wizard_form" model="ir.ui.view">
            <field name="name">bank.letter.wizard.form</field>
            <field name="model">bank.letter.wizard</field>
            <field name="arch" type="xml">
                <form string="Mandate Payment">
                    <!--<header>-->
                    <!--<button icon="fa-check-square-o" string="Validate" name="save" type="object"-->
                    <!--class="oe_highlight"/>-->
                    <!--</header>-->
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" invisible="1"/>
                                <field name="employee_name"/>
                                <field name="date"/>
                                <field name="bank_name_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="journal_id"/>
                                <field name="bank_id" invisible="1"/>
                                <field name="amount"/>
                                <field name="report"/>

                            </group>

                        </group>
                    </sheet>
                    <footer>
                        <button string='طباعة' name="print_bank_letter" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>

                </form>

            </field>
        </record>

        <record id="action_bank_letter_wizard" model="ir.actions.act_window">
            <field name="name">خطاب البنك</field>
            <field name="res_model">bank.letter.wizard</field>

            <field name="view_mode">form</field>
            <field name="view_id" ref="view_bank_letter_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>