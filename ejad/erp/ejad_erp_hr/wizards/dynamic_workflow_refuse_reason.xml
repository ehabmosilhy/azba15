<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="contract_refuse_wizard_view_form" model="ir.ui.view">
        <field name="name">dynamic.workflow.contract.refuse.wizard.form</field>
        <field name="model">dynamic.workflow.contract.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="contract refuse reason">
                <label string="Reason to refuse the Operating Dtata" for="refuse_reason"/>
                <field name="refuse_reason"/>
                <footer>
                    <button string='Refuse' name="refuse_reason_function" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>
    <record id="contract_refuse_wizard_action" model="ir.actions.act_window">
        <field name="name">Refuse contract</field>
        <field name="res_model">dynamic.workflow.contract.refuse.wizard</field>

        <field name="view_mode">form</field>
        <field name="view_id" ref="contract_refuse_wizard_view_form"/>
        <field name="target">new</field>
    </record>

