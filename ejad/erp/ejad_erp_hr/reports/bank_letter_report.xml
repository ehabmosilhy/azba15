<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_bank_letter">
        <t t-call="web.html_container">

            <div class="header">
            </div>
            <div class="footer">
            </div>
            <t t-call="web.internal_layout">
                <div class="page" style="font-size:14 px">
                    <!--<span t-esc="res_company.name"/>-->

                    <div class="row">
                        <div class="col-xs-2 col-xs-offset-1">
                            <span t-esc="data['date']"/>

                        </div>

                        <div class="col-xs-1">

                            التاريخ:

                        </div>


                    </div>
                    <div class="row" style="text-align:right">

                        <div class="col-xs=11" style="margin-right:15px">
                            المكرم/مدير
                            <span t-if="data['bank_id']" t-esc="data['bank_name_id']"/>
                        </div>
                    </div>


                    <br/>
                    <div class="row" style="text-align:center">

                        السلام عليكم و ورحمة الله وبركاته.

                    </div>
                    <br/>
                    <div class="row" style="text-align:right">

                        <div class="col-xs=11" style="margin-right:15px">
                            تهدي جامعة نايف العربية للعلوم الأمنية أطيب تحياتها لكم وترغب في التالي:
                        </div>
                    </div>
                    <br/>
                    <div class="row" style="direction:rtl;text-align:right">


                        <div class="col-xs-10">
                            تحويل مبلغ

                        </div>
                        <div class="col-xs-2">
                            <strong>نوع الطلب:</strong>
                        </div>


                    </div>

                    <br/>

                    <div class="row"  style="direction:rtl;text-align:right">


                        <div class="col-xs-8">
                            <span t-esc="data['amount_text']"/>

                        </div>
                        <div class="col-xs-2">
                            <span style="text-align:right" t-esc="'{0:,.2f}'.format(data['amount'])"/>
                        </div>
                        <div class="col-xs-2">
                            <strong>المبلغ :</strong>
                        </div>


                    </div>
                    <br/>

                    <div class="row"  style="direction:rtl;text-align:right">

                        <div class="col-xs-10">
                            <span t-esc="data['employee_name']"/>

                        </div>
                        <div class="col-xs-2">
                            <strong>اسم المستفيد:</strong>
                        </div>


                    </div>

                    <br/>

                    <div class="row" style="text-align:right">

                        <div class="col-xs-10">
                            <span t-esc="data['report']"/>

                        </div>
                        <div class="col-xs-2">
                            <strong>البيان:</strong>
                        </div>


                    </div>
                    <br/>
                    <div class="row" style="text-align:right">

                        <div class="col-xs-10">
                            <span t-esc="company_id.address_bank_report"/>

                        </div>
                        <div class="col-xs-2">
                            <strong>على العنوان:</strong>
                        </div>


                    </div>
                    <br/>
                    <br/>
                    <div t-raw="company_id.bank_report_footer"/>


                </div>
            </t>

        </t>
    </template>
    <report
            id="action_bank_letter_report"
            string="خطاب البنك"
            model="report.ejad_erp_hr.report_bank_letter"
            report_type="qweb-pdf"
            file="ejad_erp_hr.report_bank_letter"
            name="ejad_erp_hr.report_bank_letter"/>


</odoo>
