        <record id="hr_leave_notify_replaced_employee_mail_template" model="mail.template">
            <field name="name">تنبية للموظف البديل</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="subject"> تم إختيارك  ${object.replaced_employee_id.name} كموظف بديل</field>
            <field name="email_from">${user.company_id.email | safe}&gt;</field>
            <field name="email_to">${object.replaced_employee_id.user_id.email | safe}</field>
                <field name="body_html" type="html">
                    <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;"><tr><td align="center">
                    <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                    <tbody>
                        <!-- HEADER -->
                        <tr>
                            <td align="center" style="min-width: 590px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                    <tr><td valign="middle">
                                        <span style="font-size: 15px;">لقد تم إختيارك كموظف بديل للموظف</span><br/>
                                        <span style="font-size: 20px; font-weight: bold;">
                                            ${object.employee_id.name}
                                        </span>
                                    </td><td valign="middle" align="right">
                                        <img src="/ejad_erp_hr/static/src/img/VRO-Logo.svg" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${object.employee_id.company_id.name}"/>
                                    </td></tr>
                                    <tr><td colspan="2" style="text-align:center;">
                                      <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                    </td></tr>
                                </table>
                            </td>
                        </tr>
                        <!-- CONTENT -->
                        <tr>
                            <td align="center" style="min-width: 590px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                    <tr><td valign="top" style="font-size: 13px;">
                                        <div>
                                            أستاذ/ة ${object.replaced_employee_id.name},<br/><br/>
                                            لقد تم إختيارك كموظف بديل للموظف ${object.employee_id.name}:<br/>
                                            يمكنك الدخول للنظام ومتابعة المهام.<br/><br/>
                                            شكرا لك,<br/>
                                            ${user.signature | safe}<br/>
                                        </div>
                                    </td></tr>
                                    <tr><td style="text-align:center;">
                                      <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                    </td></tr>
                                </table>
                            </td>
                        </tr>
                        <!-- FOOTER -->
                        <tr>
                            <td align="center" style="min-width: 590px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                    <tr><td valign="middle" align="left">
                                        ${object.employee_id.company_id.name}
                                    </td></tr>
                                    <tr><td valign="middle" align="left" style="opacity: 0.7;">
                                        ${object.employee_id.company_id.phone}
                                        % if object.employee_id.company_id.email
                                            | <a href="'mailto:%s' % ${object.employee_id.company_id.email}" style="text-decoration:none; color: #454748;">${object.employee_id.company_id.email}</a>
                                        % endif
                                        % if object.employee_id.company_id.website
                                            | <a href="'%s' % ${object.employee_id.company_id.website}" style="text-decoration:none; color: #454748;">
                                            ${object.employee_id.company_id.website}
                                        </a>
                                        % endif
                                    </td></tr>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                    </table>
                    </td></tr>
                    <!-- POWERED BY -->
                    <tr><td align="center" style="min-width: 590px;">
                        <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: #F1F1F1; color: #454748; padding: 8px; border-collapse:separate;">
                          <tr><td style="text-align: center; font-size: 13px;">
                            Powered by <a target="_blank" href="https://media.gov.sa/ar" style="color: #875A7B;">وزارة الإعلام</a>
                          </td></tr>
                        </table>
                    </td></tr>
                </table>
                </field>
<!--            <field name="user_signature" eval="False"/>-->
        </record>

