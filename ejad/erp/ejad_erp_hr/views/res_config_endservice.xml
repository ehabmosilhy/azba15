<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_hr_config_form_inherit" model="ir.ui.view">
        <field name="name">view.hr_end.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

           <xpath expr="//div[hasclass('app_settings_block')]" position="after">

<!--               <div class="app_settings_block" data-string="Employees" string="Employees" data-key="hr" groups="hr.group_hr_manager">-->
                    <h2>حد مبلغ موافقة الرئيس </h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="max_amount_require_director_approval"/>
                                <!--<span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>-->
                                <!--<div class="row">-->
                                    <!--<div class="text-muted col-md-8">-->
                                        <!--Set default CoA for end of service benefits,reword, ...-->
                                    <!--</div>-->
                                <!--</div>-->
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="max_amount_require_director_approval"
                                            class="o_light_label"

                                            context="{'default_company_id': company_id}"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
<!--                </div>-->
<!--               <div class="app_settings_block" data-string="Employees" string="Employees" data-key="hr" groups="hr.group_hr_manager">-->
                    <h2>End Of Service Benefits</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="benefit_account_id"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="row">
                                    <div class="text-muted col-md-8">
                                        Set default CoA for end of service benefits,reword, ...
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="benefit_account_id"
                                            class="o_light_label"
                                            domain="[('company_id', '=', company_id)]"
                                            context="{'default_company_id': company_id}"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
<!--                </div>-->
<!--               <div class="app_settings_block" data-string="Employees" string="Employees" data-key="hr" groups="hr.group_hr_manager">-->
                    <h2>hr Payroll Accounting </h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="advance_emp_account_id"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="row">
                                    <div class="text-muted col-md-8">
                                        Set default CoA for Advance Employees Salary
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="advance_emp_account_id"
                                            class="o_light_label"
                                            domain="[('company_id', '=', company_id)]"
                                            context="{'default_company_id': company_id}"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_setting_right_pane">
                                <label for="advance_journal_total_id"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="row">
                                    <div class="text-muted col-md-8">
                                        Set default Advance Salary Journal
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="advance_journal_total_id"
                                            class="o_light_label"
                                            domain="[('company_id', '=', company_id)]"
                                            context="{'default_company_id': company_id}"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_setting_right_pane">
                                <label for="emp_account_id"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="row">
                                    <div class="text-muted col-md-8">
                                        Set default CoA for Employees Salary
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="emp_account_id"
                                            class="o_light_label"
                                            domain="[('company_id', '=', company_id)]"
                                            context="{'default_company_id': company_id}"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_setting_right_pane">
                                <label for="journal_total_id"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="row">
                                    <div class="text-muted col-md-8">
                                        Set default Salary Journal
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="journal_total_id"
                                            class="o_light_label"
                                            domain="[('company_id', '=', company_id)]"
                                            context="{'default_company_id': company_id}"/>
                                    </div>
                                </div>
                            </div>


                            <div class="o_setting_right_pane">
                                <label for="journal_cash_id"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="row">
                                    <div class="text-muted col-md-8">
                                        Set default  Cash Salary Journal
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="journal_cash_id"
                                            class="o_light_label"
                                            domain="[('company_id', '=', company_id)]"
                                            context="{'default_company_id': company_id}"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_setting_right_pane">
                                <label for="journal_bank_id"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="row">
                                    <div class="text-muted col-md-8">
                                        Set default  Bank Salary Journal
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="journal_bank_id"
                                            class="o_light_label"
                                            domain="[('company_id', '=', company_id)]"
                                            context="{'default_company_id': company_id}"/>
                                    </div>
                                </div>
                            </div>


                        </div>

                    </div>
<!--                </div>-->
            </xpath>

        </field>
    </record>

</odoo>