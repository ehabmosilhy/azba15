<odoo>

    <record id="form_hr_deductions_conf_view" model="ir.ui.view">
        <field name="name">hr.deductions.type</field>
        <field name="model">hr.deductions.type</field>
        <field name="arch" type="xml">
            <tree string="Deductions Structure">
                <field name="name"/>
                <field name="rule_id"/>
                <field name="deduction_type"/>
            </tree>
        </field>
    </record>

    <record id="tree_hr_deductions_conf_view" model="ir.ui.view">
        <field name="name">hr.deductions.type</field>
        <field name="model">hr.deductions.type</field>
        <field name="arch" type="xml">
            <form tring="Deductions Structure">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="rule_id"/>
                            <field name="deduction_type"/>
                        </group>
                    </group>
                    <group>
                        <group string="أنواع المكافات المشمولة بالحسمية"  attrs="{'invisible': [('deduction_type', '!=', 'reward')]}">

                            <field name="reward_dean_of_college_center"/>
                            <field name="reward_deputy_college_center"/>

                            <field name="reward_admin_college_center"/>
                            <field name="reward_manager_college"/>
                            <field name="reward_security_department"/>
                            <field name="reward_reception_department"/>
                            <field name="reward_financial_department"/>
                            <field name="reward_government_relation"/>
                            <field name="reward_calling"/>
                            <field name="reward_passport_representative_external"/>
                            <field name="reward_passport_representative_internal"/>
                            <field name="reward_purchase_representative"/>
                            <field name="reward_revenue_collector"/>
                            <field name="food_reward"/>
                            <field name="other_reward"/>

                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_deductions_form" model="ir.ui.view">
        <field name="name">hr.deductions.form</field>
        <field name="model">hr.deductions</field>
        <field name="arch" type="xml">
            <form string="Deductions" version="7.0">
                <header>
                    <button name="workflow_next" string="Accept"
                            attrs="{'invisible':[('is_workflow_next_allowed', '=', False)]}"
                            type="object"
                            class="oe_highlight reload_page_js"/>

                        <button name="workflow_previous" string="Previous Stage"
                            attrs="{'invisible':[('is_workflow_previous_allowed', '=', False)]}"
                            type="object"
                            class="oe_highlight reload_page_js"/>

                        <button name="%(deductions_refuse_wizard_action)d"
                            string="Refuse"
                            attrs="{'invisible':[('is_refuse_action_allowed', '=', False)]}"
                            type="action"/>

                    <button name="%(deductions_return_wizard_action)d" string="Return to Draft"
                            attrs="{'invisible':[('is_return_action_allowed', '=', False)]}"
                            type="action"
                            class="oe_highlight"
                        />

                        <field name="stage_id" widget="statusbar"  domain="[('id', 'in', related_stages)]"/>

        <!--                <div attrs="{'invisible':['|',('stage_id','=',False),('have_secondary_stage','=',False)]}">-->
        <!--                    <field name="current_second_stage" widget="statusbar" domain="[('id', 'in', related_secondary_stages)]"/>-->
        <!--                </div>-->


                        <group invisible="1">
                            <field name="is_workflow_next_allowed" invisible="1"/>
                            <field name="related_stages" invisible="1"/>
                            <field name="have_secondary_stage" invisible="1"/>
                            <field name="related_secondary_stages" invisible="1"/>
                            <field name="is_workflow_previous_allowed" invisible="1"/>
                            <field name="is_refuse_action_allowed" invisible="1"/>
                            <field name="is_return_action_allowed" invisible="1"/>
                            <field name="state" invisible="1"/>
                        </group>

<!--                    <button name="action_done" groups="ejad_erp_hr.deduction_hr_manager" type="object" string="Done"-->
<!--                            states="approve" class="oe_highlight"/>-->
<!--                    <button name="action_approve" groups="ejad_erp_hr.deduction_hr_auditor" type="object"-->
<!--                            string="Approve" states="draft" class="oe_highlight"/>-->
<!--                    <button name="action_set_to_draft"-->
<!--                            groups="ejad_erp_hr.deduction_hr_auditor,ejad_erp_hr.deduction_hr_manager" type="object"-->
<!--                            string="Set To Draft" states="approve" class="oe_highlight"/>-->
<!--                    <button name="action_refuse"-->
<!--                            groups="ejad_erp_hr.deduction_hr_auditor,ejad_erp_hr.deduction_hr_manager" type="object"-->
<!--                            string="Refuse" states="draft" class="oe_highlight"/>-->
<!--                    <field name="state" widget="statusbar" statusbar_visible="draft,open,paid"-->
<!--                           statusbar_colors='{"proforma":"blue","proforma2":"blue"}'/>-->
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            <field name="type_id" options="{'no_create': True,'no_open':True}"/>
                            <field name="employee_id" attrs="{'readonly':[('state', '!=', 'draft')]}"
                                   options="{'no_create': True,'no_open':True}"/>
                            <field name="department_id" options="{'no_create': True,'no_open':True}"/>
                            <field name="job_id" options="{'no_create': True,'no_open':True}"/>
                            <field name="parent_id" options="{'no_create': True,'no_open':True}"/>
                            <field name="grade_level_id" options="{'no_create': True,'no_open':True}"/>

                        </group>
                        <group>
                            <field name="date_deducted" attrs="{'readonly':[('state', '=', 'done')]}"/>
                            <field name="deducted_by" widget="radio" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            <field name="amount"
                                   attrs="{'required': [('deducted_by', '=', 'amount')],'invisible': [('deducted_by', '!=', 'amount')], 'readonly':[('state', '=', 'done')]}"/>
                            <field name="percentage"
                                   attrs="{'required': [('deducted_by', '=', 'percentage')],'invisible': [('deducted_by', '!=', 'percentage')], 'readonly':[('state', '=', 'done')]}"/>
                            <field name="hours_ded"
                                   attrs="{'required': [('deducted_by', '=', 'hours')],'invisible': [('deducted_by', '!=', 'hours')],'readonly':[('state', '=', 'done')]}"/>
                            <field name="days"
                                   attrs="{'required': [('deducted_by', '=', 'days')],'invisible': [('deducted_by', '!=', 'days')],'readonly':[('state', '=', 'done')]}"/>
                            <field name="wage"/>
                            <field name="de_amount"/>
                        </group>
                    </group>
                    <group>
                        <separator string="Description" colspan="4"/>
                        <field name="description" colspan="4" nolabel="1"/>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hr_deductions_tree" model="ir.ui.view">
        <field name="name">hr.deductions.tree</field>
        <field name="model">hr.deductions</field>
        <field name="arch" type="xml">
            <tree string="Deductions ">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="type_id"/>
                <field name="de_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_hr_deductions">
        <field name="name">Deductions</field>
        <field name="res_model">hr.deductions</field>

        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hr_deductions_tree"/>
    </record>
    <record model="ir.actions.act_window" id="action_hr_deduction_type">
        <field name="name">أنواع الحسميات</field>
        <field name="res_model">hr.deductions.type</field>

        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="form_hr_deductions_conf_view"/>
    </record>
    <menuitem parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root" id="menu_hr_deductions"
              action="action_hr_deductions"
              sequence="20" groups="access_deduction_menu"
    />

    <menuitem id="menu_hr_deduction_type" name="أنواع الحسميات"
              action="action_hr_deduction_type"
              parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration" sequence="1"/>

    <!-- groups="group_hr_deductions_user" -->

</odoo>
