<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- GRADE FORM VIEW -->
    <record id="view_employee_grade_type_form" model="ir.ui.view">
        <field name="name">hr.grade.type.form</field>
        <field name="model">hr.grade.type</field>
        <field name="arch" type="xml">
            <form string="Grade Type">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="code" required="1"/>
                        <field name="contract_type"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- GRADE TREE VIEW -->
    <record id="view_employee_grade_type_tree" model="ir.ui.view">
        <field name="name">hr.grade.type.tree</field>
        <field name="model">hr.grade.type</field>
        <field name="arch" type="xml">
            <tree string="Grades Type">
                <field name="name" required="1"/>
                <field name="code" required="1"/>
                <field name="contract_type"/>
            </tree>
        </field>
    </record>

    <!-- GRADE ACTION -->
    <record id="action_employee_grade_type" model="ir.actions.act_window">
        <field name="name">Grades Type</field>
        <field name="res_model">hr.grade.type</field>

        <field name="view_mode">tree,form</field>
    </record>

    <!-- GRADE MENU -->
    <menuitem id="menu_grade_type" parent="hr.menu_human_resources_configuration"
              action="action_employee_grade_type"/>


    <!-- GRADE FORM VIEW -->
    <record id="view_employee_grade_form" model="ir.ui.view">
        <field name="name">hr.grade.form</field>
        <field name="model">hr.grade</field>
        <field name="arch" type="xml">
            <form string="Employees Grade">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="grade" required="1"/>
                        <field name="grade_type_id"/>
                        <field name="contract_type"/>
                        <field name="annual_allowance"  />


                    </group>
                    <notebook>
                        <page string="Levels">
                            <field name="level_ids">
                                <tree string="Levels">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="grade_id"/>
                                    <field name="grade_type_id"/>
                                    <field name="gross"/>
                                    <field name="transfer_allowance"/>
                                    <field name="assignment_allowance"  invisible="1"/>
                                    <field name="annual_allowance"  invisible="1"/>
                                    <field name="internal_mandate"/>
                                    <field name="external_mandate"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="description" placeholder="Description"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- GRADE TREE VIEW -->
    <record id="view_employee_grade_tree" model="ir.ui.view">
        <field name="name">hr.grade.tree</field>
        <field name="model">hr.grade</field>
        <field name="arch" type="xml">
            <tree string="Grades ">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="annual_allowance"  />

                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- GRADE ACTION -->
    <record id="action_employee_grade" model="ir.actions.act_window">
        <field name="name">Employee Grades</field>
        <field name="res_model">hr.grade</field>

        <field name="view_mode">tree,form</field>
    </record>

    <!-- GRADE MENU -->
    <menuitem id="menu_grade" parent="hr.menu_human_resources_configuration"
              action="action_employee_grade"/>

    <!-- Level FORM VIEW -->
    <record id="view_employee_Level_form" model="ir.ui.view">
        <field name="name">hr.grade.level.form</field>
        <field name="model">hr.grade.level</field>
        <field name="arch" type="xml">
            <form string="Employees Level">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="level" required="1"/>
                        <field name="grade_id"/>
                        <field name="level_sequence" invisible="1"/>

                        <field name="grade_type_id"/>

                    </group>
                    <group>
                        <field name="gross"/>
                        <field name="transfer_allowance"/>
                        <field name="assignment_allowance" invisible="1"/>
                        <field name="annual_allowance" invisible="1"/>
                        <field name="internal_mandate"/>
                        <field name="external_mandate"/>
                    </group>
                    <field name="description" placeholder="Description"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Level TREE VIEW -->
    <record id="view_employee_Level_tree" model="ir.ui.view">
        <field name="name">hr.grade.level.tree</field>
        <field name="model">hr.grade.level</field>
        <field name="arch" type="xml">
            <tree string="Levels">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="grade_id"/>
                <field name="grade_type_id"/>
                <field name="gross"/>
                <field name="transfer_allowance"/>
                <field name="assignment_allowance" invisible="1"/>
                <field name="annual_allowance"  invisible="1"/>
                <field name="internal_mandate"/>
                <field name="external_mandate"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Level ACTION -->
    <record id="action_employee_Level" model="ir.actions.act_window">
        <field name="name">Employee Levels</field>
        <field name="res_model">hr.grade.level</field>

        <field name="view_mode">tree,form</field>
    </record>

    <!-- Level MENU -->
    <menuitem id="menu_Level" parent="hr.menu_human_resources_configuration"
              action="action_employee_Level"/>

</odoo>
