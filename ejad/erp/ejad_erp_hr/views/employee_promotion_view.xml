<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_employee_promotion" model="ir.ui.view">
            <field name="name">employee.promotion.tree</field>
            <field name="model">employee.promotion</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Promotions">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_employee_promotion_form" model="ir.ui.view">
            <field name="name">employee.promotion.form</field>
            <field name="model">employee.promotion</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Employees Promotions">
                    <header>

                         <!--<button name="workflow_next" string="Accept"-->
                            <!--attrs="{'invisible':[('is_workflow_next_allowed', '=', False)]}"-->
                            <!--type="object"-->
                            <!--class="oe_highlight reload_page_js"/>-->

                        <!--<button name="workflow_previous" string="Previous Stage"-->
                            <!--attrs="{'invisible':[('is_workflow_previous_allowed', '=', False)]}"-->
                            <!--type="object"-->
                            <!--class="oe_highlight reload_page_js"/>-->

                        <!--<button name="%(promotion_refuse_wizard_action)d"-->
                            <!--string="Refuse"-->
                            <!--attrs="{'invisible':[('is_refuse_action_allowed', '=', False)]}"-->
                            <!--type="action"/>-->

                        <!--<field name="stage_id" widget="statusbar"  domain="[('id', 'in', related_stages)]"/>-->

        <!--                <div attrs="{'invisible':['|',('stage_id','=',False),('have_secondary_stage','=',False)]}">-->
        <!--                    <field name="current_second_stage" widget="statusbar" domain="[('id', 'in', related_secondary_stages)]"/>-->
        <!--                </div>-->


                        <group invisible="1">
                            <field name="is_workflow_next_allowed" invisible="1"/>
                            <field name="related_stages" invisible="1"/>
                            <field name="have_secondary_stage" invisible="1"/>
                            <field name="related_secondary_stages" invisible="1"/>
                            <field name="is_workflow_previous_allowed" invisible="1"/>
                            <field name="is_refuse_action_allowed" invisible="1"/>
                            <field name="is_return_action_allowed" invisible="1"/>
                            <field name="state" invisible="1"/>
                        </group>

                        <field name="state" widget="statusbar"/>

                        <button name="button_create_promotion_lines"
                                string="Create Data"
                                type="object"
                                states="dept_manager"
                                class="oe_highlight"/>

                        <button name="action_hr_specialist"
                                string="تأكيد "
                                type="object"
                                states="dept_manager"
                                groups="ejad_erp_hr.group_promotion_approve1"
                                class="oe_highlight"/>
                        <button name="action_support_service"
                                string="موافقة أخصائي الموارد البشرية "
                                type="object"
                                states="hr_specialist"
                                groups="ejad_erp_hr.group_promotion_approve2"
                                class="oe_highlight"/>
                        <button name="action_office_leader"
                                string="موافقة مدير إدارة الخدمات المساندة"
                                type="object"
                                states="support_service"
                                groups="ejad_erp_hr.group_promotion_approve3"
                                class="oe_highlight"/>
                        <button name="action_promotion_done"
                                string="اعتماد قائد المكتب "
                                type="object"
                                states="office_leader"
                                groups="ejad_erp_hr.group_promotion_approve4"
                                class="oe_highlight"/>
                        <button name="button_refuse"
                                string="Refuse"
                                type="object"
                                states="approved_by_hr_specialist,approved_by_promotion_group"
                                groups="ejad_erp_hr.group_promotion_approve1,ejad_erp_hr.group_promotion_approve2,ejad_erp_hr.group_promotion_approve3,ejad_erp_hr.group_promotion_approve4"
                                class="oe_highlight"/>

                    </header>

                    <sheet>
                        <h2>
                            <field name="name"/>
                        </h2>
                        <group>
                            <group>
                                <field name="date"/>

                            </group>
                            <group></group>
                        </group>
                        <div>
                            <label for="promotions_ids">Suggested Promotions</label>
                            <field name="promotions_ids">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="current_employee_level_id"/>
                                    <field name="promotion_level_id"/>
                                </tree>
                            </field>

                        </div>

                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_promotions" model="ir.actions.act_window">
            <field name="name">Promotions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.promotion</field>

            <field name="help">Create Promotions For Employee</field>
        </record>
        <menuitem id="menu_hr_promotion"
                  name="Promotions"
                  action="action_promotions"
                  parent="hr.menu_hr_root"
                  sequence="6" groups="ejad_erp_hr.hr_empoyee_upgrade_menu"/>
    </data>
</openerp>