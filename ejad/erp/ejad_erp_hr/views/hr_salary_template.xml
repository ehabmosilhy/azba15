<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record model="ir.ui.view" id="email_template_tree">
            <field name="name">email.template.tree</field>
            <field name="model">mail.template</field>
            <field name="inherit_id" ref="mail.email_template_tree"/>
            <field name="arch" type="xml">
                    <field name="model_id" position="after">
	                <field name="model" invisible="1"/>
		    </field>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_email_template_tree_all_custom">
            <field name="name">Salary Templates Configuration</field>
            <field name="res_model">mail.template</field>

            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="mail.email_template_tree" />
            <field name="search_view_id" ref="mail.view_email_template_search"/>
            <field name="context">{'salary_template':True}</field>
            <field name="domain">[('model','=','hr.employee.salary.letter')]</field>
        </record>


	<menuitem id="menu_salary_template_config" action="action_email_template_tree_all_custom" parent="hr.menu_human_resources_configuration" groups="ejad_erp_hr.group_salary_letter_config"/>


</odoo>
