<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--deduction reward form-->
         <record id="view_hr_deductions__reward_form" model="ir.ui.view">
            <field name="name">hr.deductions.reward.form</field>
            <field name="model">hr.deductions.reward</field>
              <field name="arch" type="xml">
                <form string="حسميات المكافأت" version="7.0">
                     <header>
                      <button name="close_deduction_reward" type="object" string="close" states="draft" class="oe_highlight"/>
                      <button name="generate_deduction_reward" type="object" string="Generate" states="draft" class="oe_highlight"/>
                      <!--<button name="back_to_draft" type="object" string="Sent to Draft" states="close" class="oe_highlight"/>-->
                      <field name="state" widget="statusbar"/>
                     </header>
                    <sheet>
                        <label for="name"   class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>


                        <group  col="2">
                            <field name="date"/>
                            <field name="created_by"/>
                            <label for ="date_start" string="فترة الاجازة" />
                             <div>
                            <field name = "date_start" class="oe_inline" /> - <field name="date_end" class ="oe_inline" />
                            </div>
                        </group>
                        <separator string="الحسميات"/>
                             <field name="hr_deduction_ids"/>

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>


                </form>
            </field>
        </record>

        <!--deduction reward tree-->
        <record id="view_hr_deductions_reward_tree" model="ir.ui.view">
            <field name="name">hr.deductions.reward.tree</field>
            <field name="model">hr.deductions.reward</field>
            <field name="arch" type="xml">
                <tree string="حسميات المكافأت">
                    <field name="name"/>
                    <field name="created_by"/>
                    <field name = "date_start" class="oe_inline" />
                    <field name="date_end" class ="oe_inline" />
                    <field name="state"/>
                </tree>
            </field>
        </record>
            <!--deduction reward action-->
        <record model="ir.actions.act_window" id="action_hr_deductions_reward">
            <field name="name">حسميات المكافأت</field>
            <field name="res_model">hr.deductions.reward</field>

            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_deductions_reward_tree"/>
        </record>
   <menuitem parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root" id="hr_deductions_reward"
             action="action_hr_deductions_reward"
             sequence="20" groups="access_deduction_menu"
   />
    </data>
</openerp>