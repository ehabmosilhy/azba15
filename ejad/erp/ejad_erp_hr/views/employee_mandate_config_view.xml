        <menuitem id="menu_hr_mandate_type"
                  name="Mandate Types"
                  action="action_hr_mandate_type"
                  parent="hr.menu_human_resources_configuration"
                  sequence="1"/>
        <menuitem id="menu_hr_saudi_cities"
                  name="Saudi Arabia Cities"
                  action="action_saudi_cities"
                  parent="hr.menu_human_resources_configuration"
                  sequence="4"/>
        <menuitem id="menu_hr_mandate_reason"
                  name="Mandate Purposes"
                  action="action_mandate_reason"
                  parent="hr.menu_human_resources_configuration"
