<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_hr_mandate_type" model="ir.ui.view">
            <field name="name">hr.mandate.type.tree</field>
            <field name="model">hr.mandate.type</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Mandate Types">
                    <field name="name"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>
        <record id="view_saudi_city" model="ir.ui.view">
            <field name="name">saudi.city.tree</field>
            <field name="model">saudi.city</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Saudi Arabia Cities">
                    <field name="name"/>
                    <field name="mandate_type_id"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_mandate_amount_form" model="ir.ui.view">
            <field name="name">mandate.amount.form</field>
            <field name="model">mandate.amount</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="مبالغ الإنتداب حسب سلم الرواتب">
                    <group>
                        <group>
                            <field name="name"/>

                        </group>
                        <group>

                        </group>
                    </group>
                    <group>
                        <group>

                            <field name="internal_amount"/>
                            <field name="external_amount"/>

                        </group>
                        <group>

                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="job_ids" widget="many2many_tags"/>

                        </group>
                        <group>

                        </group>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_hr_mandate_type_form" model="ir.ui.view">
            <field name="name">hr.mandate.type.form</field>
            <field name="model">hr.mandate.type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Mandate Types">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>

                            </group>
                            <group>
                                <field name="type"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="number_days"/>
                                <field name="number_days_before"/>
                                <field name="number_days_after"/>
                            </group>
                            <group>

                                <field name="saudi_cities_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('type', '!=', 'internal')],'required': [('type', '=', 'internal')]}"/>
                                <field name="countries_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('type', '!=', 'external')],'required': [('type', '=', 'external')]}"/>
                            <field name="account_id"/>
                            </group>
                        </group>

                    </sheet>

                </form>
            </field>
        </record>
        <record id="action_hr_mandate_type" model="ir.actions.act_window">
            <field name="name">Mandate Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.mandate.type</field>

            <field name="help">HR mandate Types</field>
        </record>
        <record id="action_saudi_cities" model="ir.actions.act_window">
            <field name="name">Saudi Arabia Cities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">saudi.city</field>

            <field name="help">HR mandate Types</field>
        </record>
        <record id="action_mandate_reason" model="ir.actions.act_window">
            <field name="name">Mandate Reasons</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mandate.reason</field>

            <field name="help">HR mandate Reasons</field>
        </record>
        <!--<record id="action_mandate_amount" model="ir.actions.act_window">-->
