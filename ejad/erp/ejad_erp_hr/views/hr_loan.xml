<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Loan Tree view-->

    <record id="form_hr_loans_typesiew" model="ir.ui.view">
        <field name="name">hr.loans.types</field>
        <field name="model">hr.loans.type</field>
        <field name="arch" type="xml">
            <tree string="نوع القرض">
                <field name="name"/>

                <field name="rule_id"/>
            </tree>
        </field>
    </record>

    <record id="tree_hr_loans_types_view" model="ir.ui.view">
        <field name="name">hr.loans.types</field>
        <field name="model">hr.loans.type</field>
        <field name="arch" type="xml">
            <form string="نوع القرض">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="rule_id"  options="{'no_create': True,'no_open':True}"/>
                            <field name="emp_account_id"  options="{'no_create': True,'no_open':True}"/>
                            <field name="loan_percentage"/>
                            <field name="loan_amount"/>
                            <field name="loan_type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_loan_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.tree</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <tree string="القروض">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date"/>
                <field name="loan_amount"/>
                <field name="total_amount"/>
                <field name="total_paid_amount"/>
                <field name="balance_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--Loan Form view-->
    <record id="hr_loan_form_view" model="ir.ui.view">
        <field name="name">hr.loan.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form string=" طلب القرض">
                <header>
                    <field name="require_general_director_approve" invisible="1"/>
                    <button name="action_submit" type="object" string="تقديم الطلب " states="draft"
                            class="oe_highlight"/>
                    <button name="action_cancel" type="object" string=" الغاء الطلب " states="waiting_approval_1"/>
                    <button name="action_waiting_approval_2" type="object" string="  تأكيد استحقاق الموظف"
                            states="waiting_approval_1" groups="ejad_erp_hr.access_loan_employee"/>
                    <button name="action_waiting_approval_3" type="object" string="تدقيق المعاملة  المالية"
                            states="waiting_approval_2" groups="ejad_erp_hr.access_financial_transaction"/>
                    <button name="action_waiting_approval_4" type="object" string="اعتماد الادارة المالية "
                            states="waiting_approval_3" groups="ejad_erp_hr.access_financial_management"/>
                    <button name="action_waiting_approval_5" type="object" string="اعتماد المراقب المالي"
                            states="waiting_approval_4" groups="ejad_erp_hr.access_controller"/>
                    <button name="action_waiting_approval_6" type="object"
                            string="اعتماد مدير  الشلؤون المالية والإدارية "
                            states="waiting_approval_5" groups="ejad_erp_hr.access_university_president"/>
                    <button name="button_general_director_approve"
                            attrs="{'invisible': ['|',
                                ('require_general_director_approve', '=', False),
                                ('state', '!=', 'waiting_approval_6')]}"

                            string="General director approve" type="object"
                            class="oe_highlight" groups="ejad_erp_base.group_general_director"/>

                    <button name="action_approve" type="object" string="اتمام عملية الصرف"
                            attrs="{'invisible':['|', '&amp;',
                                ('require_general_director_approve', '=', True), ('state', '!=', 'general_director_approve'),
                                 '&amp;',
                                ('require_general_director_approve', '=', False), ('state', '!=', 'waiting_approval_6')]}"

                            class="oe_highlight"
                            groups="hr.group_hr_manager,hr.group_hr_user,ejad_erp_hr.access_payment_process"/>
                    <!-- <button name="action_double_approve" type="object" string="Approve" states="waiting_approval_2" class="oe_highlight" groups="account.group_account_user,account.group_account_manager"/> -->
                    <button name="action_refuse" type="object" string="رفض الطلب"
                            states="waiting_approval_1,waiting_approval_2,waiting_approval_3,waiting_approval_4,waiting_approval_5,waiting_approval_6"
                            class="oe_highlight" groups="hr.group_hr_manager,hr.group_hr_user"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting_approval_1,waiting_approval_2,waiting_approval_3,waiting_approval_4,waiting_approval_5,waiting_approval_6,approve"/>


                    <button name="%(ejad_erp_account.action_payment_order_report_wizard)d"
                            type="action"
                            string="طباعة أمر الصرف"
                            class="oe_stat_button oe_highlight"
                            attrs="{'invisible':[('move_id','=',False)]}"
                            context="{
									'default_move_id': move_id,
									'default_payment_name': name,

								}"
                    />

                    <button name="%(action_bank_letter_wizard)d"
                            type="action"
                            attrs="{'invisible':['|', '&amp;',
                                ('require_general_director_approve', '=', True), ('state', '=', 'waiting_approval_6'),
                                ('state', 'not in', ['general_director_approve','approve','waiting_approval_6'])]}"
                            groups="ejad_erp_hr.group_bank_letter_loan"
                            string="خطاب البنك"
                            class="oe_stat_button oe_highlight"
                            context="{
									'default_employee_id': employee_id,
									'default_amount': loan_amount,
									'default_journal_id': journal_id,

								}"
                    />
                    <button name="%(action_loan_remaining_wizard)d"
                            type="action"
                            string="استرجاع متبقي المبلغ"
                            groups="ejad_erp_hr.group_return_remaining_amount"
                            class="oe_stat_button oe_highlight"
                            attrs="{'invisible':['|',('balance_amount', '&lt;=', 0.00), ('state', '!=', 'approve')]}"
                            context="{'default_loan_request_id': active_id,'default_amount':balance_amount}"

                    />


                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <field name="loans_count" invisible="1"/>
                    <field name="wage" invisible="1"/>
                    <field name="is_other_amount" invisible="1"/>


                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create': True,'no_open':True}"
                                   attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="department_id" options="{'no_create': True,'no_open':True}"/>
                            <field name="job_position" options="{'no_create': True,'no_open':True}"/>
                            <field name="contract_type"/>
                            <field name="grade_level_id" options="{'no_create': True,'no_open':True}"/>

                        </group>
                        <group>
                            <field name="loan_type_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"  options="{'no_create': True,'no_open':True}"/>
                            <field name="date"/>
                            <field name="ens_months" invisible="1"/>
                            <field name="ens_months_c" invisible="0"/>
                            <field name="installment" attrs="{'readonly':[('state','=','approve')]}"/>
                            <field name="payment_date" attrs="{'readonly':[('state','=','approve')]}"/>
                        </group>
                        <group>
                            <field name="loan_amount"/>
                            <field name="note"/>
                            <field name="loan_amount_other" invisible="1"/>
                        </group>
                        <group>
                            <field name="payment_type2" widget="radio" attrs="{'invisible':[('state', '=','draft')],'readonly':[('state', 'not in',['waiting_approval_2'])]}"/>

                            <field name="journal_id" options="{'no_create': True,'no_open':True}"
                                   attrs="{'invisible':[('state', '=','draft')],'readonly':[('state', 'not in',['waiting_approval_2'])]}"/>

                            <field name="treasury_account_id" readonly="1"  options="{'no_create': True,'no_open':True}"/>
                            <field name="emp_account_id" options="{'no_create': True,'no_open':True}"
                                   attrs="{'invisible':[('state', '=','draft')],'readonly':[('state', 'not in',['waiting_approval_2'])]}"/>

                            <field name="bank_ref" attrs="{'invisible':[('state', '=','draft')],'readonly':[('state', 'not in',['waiting_approval_2'])]}"/>
                            <field name="cash_ref_seq" invisible="1"/>
                            <field name="bank_ref_seq" invisible="1"/>

                            <field name="bank_check_no" attrs="{'invisible':[('state', '=','draft')],'readonly':[('state', 'not in',['waiting_approval_2'])]}"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="الاستقطاعات">
                            <group>
                                <field name="move_id" options="{'no_create': True,'no_open':True}"/>
                            </group>
                            <button type="object" name="compute_installment" string="تحديد الاستقطاعات" colspan="2"
                                    attrs="{'invisible':[('state','=','approve')]}"
                                    groups="hr.group_hr_manager,hr.group_hr_user" class="oe_stat_button"
                                    icon="fa-clock-o"/>
                            <div class="oe_clear"/>
                            <field name="loan_lines">
                                <tree string="الاستقطاعات" editable="bottom">
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="paid" readonly="1" invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="total_amount" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="total_paid_amount" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="balance_amount" class="oe_subtotal_footer_separator" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--loan search view-->
    <record id="view_loan_request_search_form" model="ir.ui.view">
        <field name="name">hr.loan.search.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <search string="القرض">
                <field name="employee_id"/>
                <field name="department_id"/>
                <filter string="قروضي " name="myloan" domain="[('employee_id.user_id.id', '=', uid)]"/>
                <group expand="0" string="تجميع حسب">
                    <filter string="الموظف" name="employee_id" context="{'group_by':'employee_id'}"/>
                    <filter name="department" string="القسم" context="{'group_by':'department_id'}"/>
                    <filter name="state" string="الحالة" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>


    <!--loan menu-->
    <!--  <menuitem name="القروض"
         id="menu_hr_loans_and_advances"
               sequence="-7"></menuitem>
  -->
    <record id="action_hr_loan_request" model="ir.actions.act_window">
        <field name="name">القروض</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_loan_request_search_form"/>
        <field name="context">{'search_default_myloan': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                انشاء طلب قرض جديد .
            </p>
            <p>
                استخدم هذه القائمة لانشاء قائمة.
            </p>
        </field>
    </record>

    <menuitem name="الموارد البشرية"
              id="menu_base_hr_loan_request"
              parent="account.menu_finance"
              sequence="3"/>

    <menuitem name="القروض"
              parent="menu_base_hr_loan_request"
              id="menu_hr_loan_request"
              action="action_hr_loan_request" groups="ejad_erp_hr.access_loan_menu"/>

    <!-- Shortcuts -->
    <record id="act_hr_employee_loan_request" model="ir.actions.act_window">
        <field name="name">القروض</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.loan</field>
        <field name="binding_model_id" ref="hr.model_hr_employee" />
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
            'search_default_employee_id': [active_id],
            'default_employee_id': active_id,
            'search_default_group_by_state': 1
            }
        </field>
        <field name="domain">[('employee_id','=',active_id)]</field>
        <field name="view_id" eval="hr_loan_tree_view"/>
    </record>


    <!-- HR employee inherit Loans -->
    <record id="view_employee_form_loan_inherit" model="ir.ui.view">
        <field name="name">hr.employee.loan.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">

                <button name="print_salary_letter"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-book"
                        context="{'emp':active_id}"
                        string="خطاب التعريف"
                        groups="hr.group_hr_manager,hr.group_hr_user"
                />
                <button name="%(act_hr_employee_loan_request)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-calendar"
                        groups="hr.group_hr_manager,hr.group_hr_user">
                    <field name="loan_count" widget="statinfo" string="القروض"/>
                </button>
            </xpath>
        </field>
    </record>

    <record id="view_hr_payslip_line_tree" model="ir.ui.view">
        <field name="name">hr.payslip.line.tree</field>
        <field name="model">hr.payslip.line</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="editable"/>
                <attribute name="create">false</attribute>
                <attribute name="delete">false</attribute>
                <attribute name="edit">false</attribute>
            </xpath>
        </field>

    </record>

    <record id="view_hr_payslip_line_form" model="ir.ui.view">
        <field name="name">hr.payslip.line.form</field>
        <field name="model">hr.payslip.line</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="delete">false</attribute>
                <attribute name="edit">false</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>

            <xpath expr="//field[@name='slip_id']" position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>
        </field>

    </record>

    <record id="hr_payslip_form_inherit_view" model="ir.ui.view">
        <field name="name">hr.payslip.inherit.form1</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <button name="action_payslip_done" position="attributes">
                <attribute name="groups">ejad_erp_hr.group_salary_approval</attribute>
            </button>
            <button name="refund_sheet" position="attributes">
                <attribute name="groups">ejad_erp_hr.group_salary_approval</attribute>
            </button>
            <button name="action_payslip_draft" position="attributes">
                <attribute name="groups">ejad_erp_hr.group_salary_approval</attribute>
            </button>
            <button name="compute_sheet" position="attributes">
                <attribute name="groups">ejad_erp_hr.group_salary_approval</attribute>
            </button>
            <button name="action_payslip_cancel" position="attributes">
                <attribute name="groups">ejad_erp_hr.group_salary_approval</attribute>
            </button>
            <xpath expr="//field[@name='struct_id']" position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='contract_id']" position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='payslip_run_id']" position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']//form//group//field[@name='category_id']" position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']//form//group//field[@name='salary_rule_id']" position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='input_line_ids']//form//group//field[@name='contract_id']"
                   position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='worked_days_line_ids']//form//group//field[@name='contract_id']"
                   position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    "no_open": True,
                    }
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
