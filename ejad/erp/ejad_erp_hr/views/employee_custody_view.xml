<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_employee_custody_request_tree" model="ir.ui.view">
            <field name="name">employee.custody.request.tree</field>
            <field name="model">employee.custody.request</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Custody Request">
                    <field name="name"/>
                    <field name="Custody_date"/>
                    <field name="employee_id"/>
                    <field name="product_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_employee_custody_request_form" model="ir.ui.view">
            <field name="name">employee.custody.request.form</field>
            <field name="model">employee.custody.request</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Custody Request">
                    <header>
                        <button name="button_employee_validation"
                                attrs="{'invisible': [('state', '!=', 'draft')]}" string="تاكيد المستلم"
                                type="object" class="oe_highlight"/>
                        <button name="button_custody_cancel"
                                attrs="{'invisible': [('state', '!=', 'employee_validation')]}" string="إلغاء العهدة"
                                 groups='hr.group_hr_manager' type="object" class="oe_highlight"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,employee_validation"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="Custody_date"/>

                                <field name="employee_id" options="{'no_create': True,'no_open':True}"/>

                            </group>
                            <group>

                                <field name="product_id" options="{'no_create': True,'no_open':True}"/>
                                <field name="product_quantity"/>
                                <field name="stock_picking_id" invisible="0"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>
        <record id="action_employee_custody_request" model="ir.actions.act_window">
            <field name="name">عهد الموظفين</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.custody.request</field>

            <field name="help">employee Custody Request</field>
        </record>
        <menuitem id="menu_employee_custody_request"
                  name="عهد الموظفين"
                  action="action_employee_custody_request"
                  parent="stock.menu_stock_warehouse_mgmt"
                  sequence="100"/>
    </data>
</openerp>