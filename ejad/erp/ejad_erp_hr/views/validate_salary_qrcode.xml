<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Validate qrcode -->
        <template id="validate_salary_qrcode" name="Salary">
            <div id="wrap">
                    <div class="container-fluid arabic_font">
                        <div class="col-md-12 license_request_content">
                            <t t-if="salary_exist == True">
                                <div id="wrap" class="container oe_structure oe_empt">
                                    <div style="position: relative; border: 5px solid #27ae60;width: 80%;display: block;margin: 40px auto;text-align: center;font-weight: bold;padding: 20px 0px;border-radius: 65px;">
                                        <h1 style="color: #bd8522;font-weight: 600;">لقد تم التحقق من تعريف الراتب</h1>
                                        <br/>
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="col-md-4 padding-form-request">
                                                    <div class="inline_block_css">
                                                        <label>إســـم الموظف</label>
                                                        <br/>
                                                        <div t-esc="salary_template_id.sudo().contract_id.employee_id.name "/>
                                                    </div>
                                                </div>
                                                <div class="col-md-4 padding-form-request">
                                                    <div class="inline_block_css">
                                                        <label>رقم الهوية/ الإقامة</label>
                                                        <br/>
                                                        <div t-esc="salary_template_id.sudo().contract_id.employee_id.identification_id "/>
                                                    </div>
                                                </div>
                                                <div class="col-md-4 padding-form-request">
                                                    <div class="inline_block_css">
                                                        <label class="arabic_font">المسمى الوظيفي </label>
                                                        <br/>
                                                        <div t-esc="salary_template_id.sudo().contract_id.employee_id.job_id.name "/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <script>
                                    $(document).ready(function () {
                                        $('body #wrapwrap main').css('background','white');
                                        $('body #wrapwrap header').css('background','white');
                                    });
                                </script>

                            </t>
                            <t t-else="">
                                <div id="wrap" class="container oe_structure oe_empt">
                                    <div style="position: relative; border: 5px solid #27ae60;width: 80%;display: block;margin: 40px auto;text-align: center;font-weight: bold;padding: 20px 0px;border-radius: 65px;">

                                        <h1 style="color: #bd8522;font-weight: 600;">أعزاءنا الأفاضل</h1>
                                        <br/>
                                        <p style="font-size: 24px;font-weight: normal; color: #27ae60;">
                                            عذرا .. هذا التعريف غير صادر من جامعة نايف العربية للعلوم الأمنية .
                                        </p>
                                        <br/>
                                        <p style="font-size: 24px;font-weight: normal; color: #27ae60;">و شكرا</p>
                                    </div>
                                </div>
                                <script>
                                    $(document).ready(function () {
                                        $('body #wrapwrap main').css('background','white');
                                        $('body #wrapwrap header').css('background','white');
                                    });
                                </script>
                            </t>
                            <style>

                                @media only screen and (max-width:600px) {
                                    .col-md-4 {
                                        width: 80%;
                                        display: inline-block;
                                        border: 1px solid #27ae60;
                                        color: #13542f;
                                        border-radius: 4px;
                                        padding: 5px;
                                        margin-bottom: 10px;
                                    }
                                }

                                @media only screen and (min-width:600px) {
                                    .col-md-4 {
                                        width: 30%;
                                        display: inline-block;
                                        border: 1px solid #27ae60;
                                        color: #13542f;
                                        border-radius: 4px;
                                        padding: 5px;
                                    }
                                }


                                .row {
                                    display: block;
                                    margin-top: 15px;
                                    margin-bottom: 15px;
                                }

                            </style>
                        </div>
                    </div>
                </div>
        </template>
    </data>
</odoo>