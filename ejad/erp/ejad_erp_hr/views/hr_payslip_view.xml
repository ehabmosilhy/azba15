<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_payslip_form_add_emp_info" model="ir.ui.view">
            <field name="name">hr.payslip.inherit.form.add.emp.info</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="before">
                    <group>
                        <group>
                            <field name="emp_no"/>
                            <field name="employee_grade_level_id" options="{'no_create': True,'no_open':True}"/>
                        </group>

                    </group>

                </xpath>

            </field>
        </record>

        <record id="hr_payslip_tree_add_emp_info" model="ir.ui.view">
            <field name="name">hr.payslip.inherit.tree.add.emp.info</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_id']" position="after">

                    <field name="emp_no"/>
                    <field name="employee_grade_level_id"/>

                </xpath>

            </field>
        </record>
    </data>
</odoo>
