<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_inactive_product_report" model="ir.ui.view">
        <field name="name">Inactive Product Report</field>
        <field name="model">wiz.inactive.product.report</field>
        <field name="arch" type="xml">
            <form string="Choose your date">
                <group>
                    <group>
                        <field name="location_id"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="check_report" string="طباعة" type="object" class="btn-primary"/>
                    <button string="إلغاء" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_inactive_product_report" model="ir.actions.act_window">
        <field name="name">تقرير المنتجات الراكدة في المستودع</field>
        <field name="res_model">wiz.inactive.product.report</field>
        <!--<field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_inactive_product_report"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_inactive_product" name="المنتجات الراكدة"  action="action_inactive_product_report"  parent="stock.menu_warehouse_report" sequence="199"/>
</odoo>

