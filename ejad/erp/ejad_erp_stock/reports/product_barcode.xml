 <template id="report_lot_barcode" inherit_id="product.report_simple_label">
	<xpath expr="//div[1]" position="replace">
        <table style="border-spacing:0;margin-bottom:0;" class="table">
			<tbody>
                <!--<tr syle="height:140%;">-->
                    <!--<td style="border: 2px solid black;" colspan="2" >-->
                        <!--<t t-if="product.default_code">-->
                            <!--[<strong t-field="product.default_code"/>]-->
                        <!--</t>-->
                        <!--<strong t-field="product.name"/>-->
                    <!--</td>-->
                <!--</tr>-->
				<tr>
                    <td style="border: 2px solid black;text-align: center; vertical-align: middle;" class="col-xs-1">
                        <img t-if="product.barcode and len(product.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', product.barcode, 600, 150)" style="width:100%;height:20%;"/>
                        <img t-elif="product.barcode and len(product.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', product.barcode, 600, 150)" style="width:100%;height:20%;"/>
                        <img t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.barcode, 450, 150)" style="width:100%;height:20%;"/>
                        <span t-field="product.barcode"/>
                    </td>
					<td style="border: 2px solid black; text-align: center;" class="col-xs-4">
                        <h4>
                        <img src="/ejad_erp_stock/static/src/img/barcode_logo.png" class="img" style="width:110%;height:30%;"/>
                        </h4>
                    </td>
                </tr>
            </tbody>
        </table>
	</xpath>
</template>


