<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_inactive_product">
        <t t-call="web.html_container">
            <t t-call="ejad_erp_purchase.nauss_header"/>
            <t t-call="ejad_erp_purchase.nauss_footer"/>
            <t t-call="web.internal_layout">
                <div class="page" style="border-radius:25px;border:2px solid;padding:10px;height: 1000px;">
                    <h3>الأصناف الراكدة بالمستودع :
                        <strong>
                            <span t-esc="data['location_id'][1]"/>
                        </strong>
                    </h3>
                    <div>
                        <!--<t t-if="data['date_from']"><strong>From</strong> <span t-esc="data['date_from']"/></t>-->
                        <!--<t t-if="data['date_to']"><strong> To </strong><span t-esc="data['date_to']"/></t>-->
                        <t t-if="data['date_from']">
                            <strong>من</strong>
                            <span t-esc="data['date_from']"/>
                        </t>
                        <t t-if="data['date_to']">
                            <strong>الى</strong>
                            <span t-esc="data['date_to']"/>
                        </t>
                    </div>
                    <br/>
                    <table t-if="len(products)" class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">رقم الصنف</th>
                                <th class="text-center">اسم الصنف ومواصفاته</th>
                                <th class="text-center">الوحدة</th>
                                <th class="text-center">الكمية</th>
                                <th class="text-center">تاريخ اخر حركة</th>

                            </tr>
                        </thead>
                        <tr t-foreach="products" t-as="product">
                            <td>
                                <span t-field="product.default_code"/>
                            </td>

                            <td>
                                <span t-esc="product.name"/>
                            </td>
                            <td>
                                <span t-esc="product.uom_id.name"/>
                            </td>
                            <td>
                                <span t-esc="product.qty_available"/>
                            </td>
                            <td>
                                <span t-esc="last_move_dates[product.id]"/>
                            </td>
                            </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
    <report
            id="action_inactive_product_report"
            model="report.ejad_erp_stock.report_inactive_product"
            string="المنتجات الراكدة"
            report_type="qweb-pdf"
            name="ejad_erp_stock.report_inactive_product"
            file="ejad_erp_stock.report_inactive_product"
    />


</odoo>
