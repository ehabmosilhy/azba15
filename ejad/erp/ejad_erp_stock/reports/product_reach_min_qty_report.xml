<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_product_min_qty">
        <t t-call="web.html_container">
            <t t-call="ejad_erp_purchase.nauss_header"/>
            <t t-call="ejad_erp_purchase.nauss_footer"/>
            <t t-call="web.internal_layout">
                <div class="page" style="border-radius:25px;border:2px solid;padding:10px;height: 1000px;">
                    <h3>المنتجات اللتي وصلت الحد الأدنى خلال فترة :
                    </h3>
                    <div>

                        <t t-if="data['date_from']">
                            <strong>من</strong>
                            <span t-esc="data['date_from']"/>
                        </t>
                        <t t-if="data['date_to']">
                            <strong>الى</strong>
                            <span t-esc="data['date_to']"/>
                        </t>
                    </div>
                    <br/>
                    <table t-if="len(lines)" class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">رقم الصنف</th>
                                <th class="text-center">اسم الصنف ومواصفاته</th>
                                <th class="text-center">الوحدة</th>
                                <th class="text-center">الحد الأدنى</th>
                                <th class="text-center">الحد الأقصى</th>
                                <th class="text-center">أمر الشراء</th>
                                <!--<th class="text-center">الكمية</th>-->

                            </tr>
                        </thead>
                        <tr t-foreach="lines" t-as="line">
                            <td>
                                <span t-field="line.product_id.default_code"/>
                            </td>

                            <td>
                                <span t-esc="line.product_id.name"/>
                            </td>
                            <td>
                                <span t-esc="line.product_id.uom_id.name"/>
                            </td>
                            <td>
                                <span t-esc="line.orderpoint_id.product_min_qty"/>
                            </td>
                            <td>
                                <span t-esc="line.orderpoint_id.product_max_qty"/>
                            </td>
                            <td>
                                <span t-esc="line.order_id.name"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
    <report
            id="action_product_min_qty"
            model="report.ejad_erp_stock.report_product_min_qty"
            string="المنتجات وصلت حد الطلب"
            report_type="qweb-pdf"
            name="ejad_erp_stock.report_product_min_qty"
            file="ejad_erp_stock.report_product_min_qty"
    />


</odoo>
