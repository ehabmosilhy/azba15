<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_stock_picking_quality_check" model="ir.ui.view">
            <field name="name">stock.picking.inherit.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='show_validate']" position="after">
                    <field name="is_operation_quality_check" invisible="1"/>
                    <button name="action_approve_quality" string="مواقثة أعضاء لجنة الفحص والإستلام" type="object"
                            class="oe_highlight o_wow"
attrs="{'invisible': ['|',('state', 'not in', ['assigned', 'employee_validation']),('is_operation_quality_check', '!=', True)]}"/>                    <button name="action_refuse_quality" string="رفض أعضاء لجنة الفحص والإستلام" type="object"
                            class="oe_highlight o_wow"
                            attrs="{'invisible': ['|',('state', 'not in', ['assigned', 'employee_validation']),('is_operation_quality_check', '!=', True)]}"
                    />

                </xpath>
            </field>
        </record>
        <record id="view_stock_picking_purchase_requisition_request" model="ir.ui.view">
            <field name="name">stock.picking.inherit.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="after">
                    <group>
                        <group>
                            <field name="purchase_representative_id" readonly="1"
                                   attrs="{'invisible': [('purchase_requisition_id', '=', False)]}"/>
                            <field name="employee_id" invisible="1"/>

                        </group>
                        <group>
                            <field name="show_employee_validate" invisible="1"/>
                            <field name="quality_approved_by_employee" invisible="1"/>
                            <field name="quality_approved_by_stock_manger" invisible="1"/>
                            <field name="quality_approved_by_purchase_representative" invisible="1"/>
                            <field name="quality_refused_by_employee" invisible="1"/>
                            <field name="quality_refused_by_stock_manger" invisible="1"/>
                            <field name="quality_refused_by_purchase_representative" invisible="1"/>
                            <field name="is_operation_quality_check" invisible="1"/>
                            <field name="purchase_requisition_id"  attrs="{'invisible': [('purchase_requisition_id', '=', False)]}" />
                            <!--<field name="employee_custody_id" invisible="0"/>-->
                        </group>
                    </group>

                </xpath>
                <xpath expr="//div[1]" position="inside">
                    <button class="oe_stat_button" name="action_get_custody_lines"
                            string="العهد" type="object"
                            attrs="{'invisible':[('purchase_requisition_id','=',False)]}" icon="fa-info"/>
                </xpath>
                <xpath expr="//button[@name='button_validate']" position="before">
                    <button name="button_employee_validation"
                            attrs="{'invisible': [('show_employee_validate', '=', False)]}" string="تاكيد المستلم"
                            type="object" class="oe_highlight"/>
                </xpath>
            </field>
        </record>

