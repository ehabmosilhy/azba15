<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_stock_scrap_inherit" model="ir.ui.view">
            <field name="name">stock.scrap.inherit.form</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_validate']" position="replace">
                    <button name="action_validate" states="stocks_manger" string="موافقة المشرف على المشتريات والمستودعات" type="object"
                            class="oe_highlight" groups="ejad_erp_base.group_inventory_purchases_manager"/>
                </xpath>
                <xpath expr="//button[@name='action_validate']" position="after">
                    <button name="button_stocks_manger_validation" states="draft"
                            string="موافقة مدير إدارة المستودعات" type="object" class="oe_highlight"
                            groups="ejad_erp_base.group_inventory_department"/>
                    <!--<button name="button_university_manger_validation" states="stocks_manger"-->
                            <!--string="موافقة رئيس الجامعة" type="object" class="oe_highlight"-->
                            <!--groups="ejad_erp_purchase.group_general_director"/>-->
                </xpath>
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,stocks_manger,university_manger,done"/>

                </xpath>
            </field>
        </record>

    </data>
</openerp>
