<?xml version="1.0"?>
<odoo>

    <record id="ejad_helpdesk_stage_view_form" model="ir.ui.view">
        <field name="name">helpdesk.stage.form</field>
        <field name="model">helpdesk.stage</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_stage_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[2]" position="after">
                <group>
                    <field name="prev_stage"/>
                    <field name="next_stage"/>
                </group>
                <group>
                    <field name="responsible_stage_type"/>
                    <field name="positions" attrs="{'invisible': [('responsible_stage_type', '!=', 'position')]}"/>
                    <field name="responsible_user" attrs="{'invisible': [('responsible_stage_type', '!=', 'person')]}"/>
                </group>

            </xpath>
            <xpath expr="//field[@name='fold']" position="after">
                <field name="is_refused"/>
            </xpath>
            <xpath expr="//field[@name='is_close']" position="after">
                <field name="next_team" attrs="{'invisible': [('is_close', '!=', True)]}"/>
            </xpath>
        </field>
    </record>

    <record id="ejad_helpdesk_ticket_view_kanban1" model="ir.ui.view">
        <field name="name">helpdesk.ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="priority">11</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="inside">
                <field name="create_date" />
            </xpath>
            <xpath expr="//field[@name='commercial_partner_id']" position="before">
                <div>
                    <field name="create_date"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='stage_id']" position="before">
                <field name="assign_method" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='stage_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('assign_method', '=', 'auto')]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="ejad_helpdesk_ticket_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
         <field name="priority">100</field>
         <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
                    <button name="action_accept"
                            type="object"
                            class="oe_highlight"
                            string="تأكيد"
                            attrs="{'invisible': ['|', ('is_show_button', '=', False), ('assign_method', '!=', 'auto')]}"
                    />
                    <button name="%(helpdesk_return_wizard_action)d"
                            type="action"
                            class="oe_highlight"
                            string="إرجاع المرحلة"
                            attrs="{'invisible': ['|', '|', ('is_prev_allowed', '=', False), ('is_show_button', '=', False), ('assign_method', '!=', 'auto')]}"
                    />

                    <button name="%(helpdesk_refuse_wizard_action)d"
                            type="action"
                            class="oe_highlight"
                            string="إلغاء"
                            attrs="{'invisible': ['|', '|', ('is_refused', '=', True),  ('is_show_button', '=', False), ('assign_method', '!=', 'auto')]}"
                    />

                <field name="is_show_button" invisible="1"/>
                <field name="is_prev_allowed" invisible="1"/>
                <field name="is_refused" invisible="1"/>
                <field name="assign_method" invisible="1"/>

            </xpath>

            <xpath expr="//field[@name='stage_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('assign_method', '=', 'auto')]}</attribute>
            </xpath>

            <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="prev_ticket"/>
            </xpath>

        </field>
     </record>

</odoo>