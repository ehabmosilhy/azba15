<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_refund_invoice_wizard_form" model="ir.ui.view">
            <field name="name">refund.invoice.report.wizard.form</field>
            <field name="model">refund.invoice.report.wizard</field>
            <field name="arch" type="xml">
                <form string="خطاب البنك">
                    <sheet>
                        <group>
                            <group>
                                <field name="year_and_degree"/>
                                <field name="refund_reason"/>
                                <field name="registration_office_report" dir="rtl"/>
                            </group>
                            <group>
                                <field name="invoice_id" invisible="1"/>
                                <field name="working_place"/>
                                <field name="paid_amount"/>
                                <field name="bank_acc"/>
                                <field name="bank_account_name"/>
                                <field name="bank_name"/>


                            </group>

                        </group>
                        <group>

                        </group>
                    </sheet>
                    <footer>
                        <button string='طباعة' name="print_refund_invoice_report" type="object"
                                class="btn-primary"/>
                        <button string="إلغاء" class="btn-default" special="cancel"/>
                    </footer>

                </form>

            </field>
        </record>

        <record id="action_refund_invoice_report_wizard" model="ir.actions.act_window">
            <field name="name">نموذج طلب استيراد رسوم دراسية</field>
            <field name="res_model">refund.invoice.report.wizard</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_refund_invoice_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>