<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_bank_letter_multi_wizard_form" model="ir.ui.view">
            <field name="name">bank.letter.wizard.multi.form</field>
            <field name="model">bank.letter.multi.wizard</field>
            <field name="arch" type="xml">
                <form string="خطاب البنك">
                    <sheet>
                        <group>
                            <group>

                                <field name="date"/>
                                <field name="bank_name_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="journal_id"/>
                                <field name="bank_id" invisible="1"/>
                                <field name="invoice_id" invisible="1"/>
                                <field name="line_number" invisible="1"/>
                                <field name="total_amount" invisible="1"/>
                                <field name="bank_account_id" invisible="1"/>

                            </group>

                        </group>
                        <group>
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="name" invisible="1"/>
                                    <field name="partner_id2" required="1"/>
                                    <field name="acc_number"/>
                                    <field name="bank_id"/>
                                    <field name="amount" sum="total"/>
                                </tree>
                            </field>

                        </group>
                    </sheet>
                    <footer>
                        <button string='طباعة' name="print_bank_letter" type="object"
                                class="btn-primary"/>
                        <button string="إلغاء" class="btn-default" special="cancel"/>
                    </footer>

                </form>

            </field>
        </record>

        <record id="action_bank_letter_multi_wizard" model="ir.actions.act_window">
            <field name="name">خطاب البنك</field>
            <field name="res_model">bank.letter.multi.wizard</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_bank_letter_multi_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>