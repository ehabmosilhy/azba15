<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_payment_order_wizard_form" model="ir.ui.view">
            <field name="name">payment.order.report.wizard.form</field>
            <field name="model">payment.order.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="partner_name"/>
                                <field name="basis_exchange"/>
                                <field name="report"/>
                                <field name="move_id" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                                <field name="debit_account_id" invisible="1"/>
                                <field name="credit_account_id" invisible="1"/>
                                <field name="hijri_date" invisible="1"/>
                                <field name="payment_name" invisible="1"/>
                            </group>
                            <group>
                                <field name="transfer_speech_no"/>
                                <field name="transfer_speech_date"/>
                                <field name="paid_amount"/>
                                <field name="paid_amount_words" invisible="1"/>


                            </group>

                        </group>
                        <group>

                        </group>
                    </sheet>
                    <footer>
                        <button string='طباعة' name="print_payment_order_report" type="object"
                                class="btn-primary"/>
                        <button string="إلغاء" class="btn-default" special="cancel"/>
                    </footer>

                </form>

            </field>
        </record>

        <record id="action_payment_order_report_wizard" model="ir.actions.act_window">
            <field name="name">نموذج اعتماد أمر صرف</field>
            <field name="res_model">payment.order.report.wizard</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_payment_order_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>