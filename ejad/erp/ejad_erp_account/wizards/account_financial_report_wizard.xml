<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_report_financial_report_view" model="ir.ui.view">
        <field name="name">Financial Reports</field>
        <field name="model">nauss.report.financial</field>
        <field name="inherit_id" ref="account.account_common_report_view"/>
        <field name="arch" type="xml">
            <data>
                <!--<xpath expr="//field[@name='journal_ids']" position="attributes">-->
                    <!--<attribute name="invisible">1</attribute>-->
                <!--</xpath>-->
                <xpath expr="//field[@name='company_id']" position="replace">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//group[1]" position="replace">
                    <group>
                        <field name="report_name"/>

                    </group>


                    <group>
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        <field name="account_type_ids" widget="many2many_tags"/>
                        <field name="account_ids"/>
                    </group>
                    <group>
                        <group>
                            <field name="date_from"/>


                        </group>
                        <group>
                            <field name="date_to"/>
                            <field name="target_move" invisible="1"/>
                        </group>


                    </group>

                    <group>
                        <group>
                            <field name="initial_balance"/>


                        </group>
                        <group>
                            <field name="report_type"/>

                        </group>

                    </group>

                    <newline/>
                </xpath>
            </data>

        </field>
    </record>

    <record id="action_account_financial_report_menu" model="ir.actions.act_window">
        <field name="name">Financial Reports</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nauss.report.financial</field>
        <!--<field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_report_financial_report_view"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_account"/>
        <field name="binding_type">report</field>
    </record>
