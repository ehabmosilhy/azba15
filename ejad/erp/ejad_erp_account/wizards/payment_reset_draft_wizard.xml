<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_payment_reset_wizard_form" model="ir.ui.view">
            <field name="name">payment.reset.wizard.form</field>
            <field name="model">payment.reset.wizard</field>
            <field name="arch" type="xml">
                <form string="Payment Reset to Draft">
                    <sheet>
                        <group>
                            <field name="comment"/>


                        </group>
                    </sheet>
                    <footer>
                        <button string='Validate' name="action_validate_payment_reset" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>

                </form>

            </field>
        </record>

        <record id="action_payment_reset_wizard" model="ir.actions.act_window">
            <field name="name">Payment Reset to Draft</field>
            <field name="res_model">payment.reset.wizard</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_payment_reset_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>