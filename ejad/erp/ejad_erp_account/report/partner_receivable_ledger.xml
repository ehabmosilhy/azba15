<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_receivable_partnerledger">
            <t t-call="web.html_container">
                <!--<t t-set="data_report_margin_top" t-value="12"/>-->
                <!--<t t-set="data_report_header_spacing" t-value="9"/>-->
                <!--<t t-set="data_report_dpi" t-value="110"/>-->
                <t t-if="data['form']['report_type']!='summery'">
                    <t t-foreach="docs" t-as="o">
                        <!--<t t-call="ejad_erp_account.nauss_header"/>-->
                        <!--<t t-call="ejad_erp_account.nauss_footer"/>-->
                        <t t-call="ejad_erp_account.partner_ledger_external_layout">
                            <div class="page">
                                <br/>
                                <br/>
                                <h2>تقرير كشف المستحقات</h2>
                                <br/>
                                <br/>
                                <div class="row">
                                    <div class="col-6">
                                        <t t-if="data['form']['date_to']">
                                            <strong>إلى تاريخ
                                            </strong>
                                            <span t-esc="data['form']['date_to']"/>
                                        </t>
                                    </div>
                                    <div class="col-6">
                                        <t t-if="data['form']['date_from']">
                                            <strong>من تاريخ :

                                            </strong>
                                            <span t-esc="data['form']['date_from']"/>
                                            <br/>
                                        </t>


                                    </div>

                                </div>
                                <br/>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>

                                            <td class="text-center" colspan="2">
                                                <strong t-esc="o.uni_id or ''"/>
                                            </td>
                                            <td class="text-center" colspan="5">
                                                <strong t-esc="o.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="text-center">
                                                التاريخ
                                                <br/>
                                                Date
                                            </th>
                                            <th class="text-center">رقم السند
                                                <br/>
                                                Voucher No
                                            </th>
                                            <th class="text-center">رقم القيد
                                                <br/>
                                                Move Number
                                            </th>
                                            <th class="text-center">الكشف
                                                <br/>
                                                Statement
                                            </th>
                                            <!--<th>Ref</th>-->
                                            <th class="text-center">
                                                المطلوب
                                                <br/>

                                                Debit
                                            </th>
                                            <th class="text-center">
                                                المدفوع
                                                <br/>

                                                Credit
                                            </th>
                                            <th class="text-center">المتبقي
                                                <br/>
                                                Balance
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr t-foreach="lines(data, o)" t-as="line">
                                            <td>
                                                <span t-esc="line['date']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['br']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['move_name']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['statement']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="line['debit']"
                                                      t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="line['credit']"
                                                      t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="line['progress']"
                                                      t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td class="text-center" colspan="4">
                                                الإجمــــــــــــالي:

                                            </td>
                                            <td class="text-center">
                                                <strong t-esc="sum_partner(data, o, 'debit')"
                                                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>
                                            <td class="text-center">

                                                <strong t-esc="sum_partner(data, o, 'credit')"
                                                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>
                                            <td class="text-center">
                                                <strong t-esc="sum_partner(data, o, 'debit - credit')"
                                                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </t>
                </t>
                <t t-if="data['form']['report_type']=='summery'">
                    <t t-call="ejad_erp_account.partner_ledger_external_layout">

                        <div class="page">
                            <br/>
                            <br/>
                            <h2>تقرير كشف المستحقات</h2>
                            <br/>
                            <br/>
                            <div class="row">
                                <div class="col-6">
                                    <t t-if="data['form']['date_to']">
                                        <strong>إلى تاريخ
                                        </strong>
                                        <span t-esc="data['form']['date_to']"/>
                                    </t>
                                </div>
                                <div class="col-6">
                                    <t t-if="data['form']['date_from']">
                                        <strong>من تاريخ :

                                        </strong>
                                        <span t-esc="data['form']['date_from']"/>
                                        <br/>
                                    </t>


                                </div>

                            </div>
                            <br/>

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th class="text-center" colspan="2">
                                            الجهة/الطالب
                                        </th>
                                        <th class="text-center">
                                            المطلوب
                                            <br/>

                                        </th>
                                        <th class="text-center">
                                            المدفوع

                                        </th>
                                        <th class="text-center">
                                            المتبقي
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="docs" t-as="o">

                                        <tr>
                                            <td>
                                                <strong t-esc="o.uni_id or ''"/>
                                            </td>
                                            <td>
                                                <strong t-esc="o.name"/>
                                            </td>
                                            <td class="text-right">
                                                <strong t-esc="sum_partner(data, o, 'debit')"
                                                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <strong t-esc="sum_partner(data, o, 'credit')"
                                                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <strong t-esc="sum_partner(data, o, 'debit - credit')"
                                                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>

            </t>
        </template>

        <report
                id="action_partner_receivable_ledger"
                model="report.ejad_erp_account.report_receivable_partnerledger"
                string="Partner Receivable Ledger"
                report_type="qweb-pdf"
                name="ejad_erp_account.report_receivable_partnerledger"
                file="ejad_erp_account.report_receivable_partnerledger"
        />
    </data>
</openerp>
