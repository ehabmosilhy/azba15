<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="ejad_erp_account.account_voucher_report">
            <t t-call="report.html_container">
s                    <t t-foreach="docs" t-as="o">
                        <div class="page" style="font-size:22px; font-family:'Times New Roman' !important;">
                            <div class="col-12">
                                <div class="col-3">
                                      <strong> الادارة المالية‬‬‬</strong>
                                </div>
                                <div class="col-5">
                                <br/>
                                <h2 align="center">
                                     <strong> ‫اعتماد‬ ا‫مر  ‫الصرف‬‬‬</strong>
                                    <br/><br/>
                                </h2>
                                </div>
                                <div class="col-4 pull-left" >
                                    <span >التاريخ</span>
                                    <span t-esc="o.date"/>
                                    <br/>
                                    <span >الموافق</span>
                                    <span t-esc="hijri_dates_now(o.date)" />
                                    <br/>
                                    <span >رقم السند</span>
                                    <span t-esc="o.name"/>
                                </div>
                            </div>

                                <div class="col-12 pull-right" >
                                     <span >صاحب الاستحقاق </span>
                                    <span t-esc="o.partner_id.name"/>
                                </div>
                             <div class="col-12 pull-right" >
                                     <span >اساس الصرف </span>

                                </div>
                             <div class="col-12 pull-right" >
                                     <span >البيان </span>

                                </div>
                            <div class="col-1" >
                                    <div class="col-4 pull-right" >

                                    </div>

                                <div class="col-4 pull-right" >
                                    <span>د-H</span>
                                    <span>ريال-SR</span>
                                    <br/>
                                    <t t-if="o.credit > 0"> <span t-esc="o.credit"/> </t>
                                    <t t-if="o.debit > 0"> <span t-esc="o.debit"/> </t>
                                </div>
                            </div>

                            <div class="col-12" align="center">
                                <br/><br/><br/><br/>
                                <t t-if="o.debit > 0">
                                    <strong class="pull-right" >استلمنا من السيد / السادة:     </strong>
                                    <span align="center" t-esc="o.partner_id.name"/>
                                    <strong class="pull-left" >Received From:</strong>
                                </t>
                                <t t-if="o.credit > 0">
                                    <strong class="pull-right"> إصرفوا للسيد / السادة:    </strong>
                                    <span align="center" t-esc="o.partner_id.name"/>
                                    <strong class="pull-left">:Paid To</strong>
                                </t>
                                <br/><br/>
                                <strong class="pull-right">مبلغ و قدره:</strong>
                                <t t-if="o.credit > 0"> <span align="center" t-esc="num_to_word(o.amount)"/> </t>
                                <t t-if="o.debit > 0"> <span align="center" t-esc="num_to_word(o.amount)"/> </t>
                                <strong class="pull-left">:Amount</strong>
                                <br/><br/>
                                <strong class="pull-right">الإجراء:</strong>
                                <span align="center" t-esc = "dict(o.fields_get(allfields=['action_type'])['action_type']['selection'])[o.action_type]"/>
                                <strong class="pull-left">:Procedure</strong>
                                <br/><br/>
                                <strong class="pull-right">البنك:</strong>
                                <span align="center" t-esc="o.bank_id.name"/>
                                <strong class="pull-left">:Bank</strong>
                                <br/><br/>
                                <strong class="pull-right">و ذلك:</strong>
                                <span align="center">.............................</span>
                                <strong class="pull-left">:For</strong>
                                <br/><br/><br/><br/><br/><br/><br/><br/>

                            </div>
                            <div>
                                <strong style="margin-right:50px">المستلم Receiver</strong>
                                <strong style="margin-right:50px">المحاسب Accountant</strong>
                                <strong style="margin-right:50px">المدير Manager</strong>
                                <br/><br/>
                                <span style="margin-right:70px">.........................</span>
                                <span style="margin-right:90px">.........................</span>
                                <span style="margin-right:90px">.........................</span>
                            </div>

                        </div>
                    </t>
                </t>
        </template>
    </data>
</openerp>
