<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bank_letter_report">
        <t t-call="web.html_container">

            <t t-foreach="docs" t-as="o">
                <div class="header">
                </div>
                <div class="footer">
                </div>
                <t t-call="web.internal_layout">
                    <div class="page" style="direction:rtl;font-size:14 px">
                        <!--<span t-esc="res_company.name"/>-->

                        <div class="row">
                            <div class="col-2 col-offset-1">
                                <span t-field="o.date" t-field-options='{"format": "yyyy-MM-dd"}'/>

                            </div>

                            <div class="col-1">

                                التاريخ:

                            </div>


                        </div>
                        <div class="row" style="text-align:right">

                            <div class="col=11" style="margin-right:15px">
                                المكرم/مدير
                           <span t-field="o.journal_id.bank_id.name"/>
                            </div>
                        </div>


                        <br/>
                        <div class="row" style="text-align:center">

                            السلام عليكم و ورحمة الله وبركاته.

                        </div>
                        <br/>
                        <div class="row" style="text-align:right">

                            <div class="col=11" style="margin-right:15px">
                                تهدي جامعة نايف العربية للعلوم الأمنية أطيب تحياتها لكم وترغب في التالي:
                            </div>
                        </div>
                        <br/>
                        <div class="row" style="text-align:right">


                            <div class="col-10">
                                تحويل مبلغ

                            </div>
                            <div class="col-2">
                                <strong>نوع الطلب:</strong>
                            </div>


                        </div>

                        <br/>

                        <t t-foreach="o.line_ids" t-as="i">
                            <div class="row" t-if="i.account_id == o.journal_id.default_account_id" style="direction:rtl;text-align:right">


                                <div class="col-8">
                                    <span t-esc="o.currency_id.amount_to_text(i.credit)"/>

                                </div>
                                <div class="col-2">
                                    <span style="text-align:right" t-field="i.credit"/>
                                </div>
                                <div class="col-2">
                                    <strong>المبلغ :</strong>
                                </div>


                            </div>
                            <br/>



                        </t>
                        <div class="row" style="direction:rtl;text-align:right">

                                <div class="col-10">
                                    <span t-esc="o.partner_id.name"/>

                                </div>
                                <div class="col-2">
                                    <strong>اسم المستفيد:</strong>
                                </div>


                            </div>
                        <br/>

                        <div class="row" style="text-align:right">

                            <div class="col-10">
                                <span t-esc="o.report or o.narration"/>

                            </div>
                            <div class="col-2">
                                <strong>البيان:</strong>
                            </div>


                        </div>
                        <br/>
                        <div class="row" style="text-align:right">

                            <div class="col-10" t-if="not o.bank_account_info">
                                <span t-if="o.partner_id.bank_ids" t-esc="o.partner_id.bank_ids[0].acc_number"/>
                                <span t-if="o.partner_id.bank_ids" t-esc="o.partner_id.bank_ids[0].bank_id.name"/>
                                <br/>
                                <!--<div t-if="o.partner_id.bank_ids" t-raw="o.partner_id.bank_ids[0].additional_info"/>-->

                            </div>
                            <div class="col-10" t-if="o.bank_account_info">
                                <span t-esc="o.bank_account_info"/>
                            </div>
                            <div class="col-2">
                                <strong>على العنوان:</strong>
                            </div>


                        </div>
                        <br/>
                        <div class="row" style="text-align:right">

                            <div class="col=11" style="margin-right:15px">
                                من حسابنا الجاري رقم:
                           <span t-field="o.journal_id.bank_account_id.acc_number"/>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div t-raw="o.company_id.bank_report_footer"/>


                    </div>
                </t>
            </t>
        </t>
    </template>
    <report
            id="bank_letter_report_print"
            string="خطاب البنك"
            model="account.move"
            report_type="qweb-pdf"
            file="ejad_erp_account.bank_letter_report"
            name="ejad_erp_account.bank_letter_report"/>

</odoo>
