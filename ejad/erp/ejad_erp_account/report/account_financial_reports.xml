<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_nauss_financial">
        <t t-call="web.html_container">
            <!--<t t-set="data_report_margin_top" t-value="12"/>-->
            <!--<t t-set="data_report_header_spacing" t-value="9"/>-->
            <!--<t t-set="data_report_dpi" t-value="110"/>-->
            <t t-call="ejad_erp_account.nauss_header"/>
            <t t-call="ejad_erp_account.nauss_footer"/>
            <t t-call="web.internal_layout">
                <div class="page">
                    <h2>
                        <span t-esc="data['report_name']"/>

                    </h2>

                    <div class="row mb32">
                        <div class="col-4">
                            <t t-if="data['date_from']">
                                <strong>Date from :</strong>
                                <span t-esc="data['date_from']"/>
                                <br/>
                            </t>
                            <t t-if="data['date_to']">
                                <strong>Date to :</strong>
                                <span t-esc="data['date_to']"/>
                            </t>
                        </div>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr class="text-center">
                                <th t-if="data['report_type']!='summery'">
                                    التاريخ
                                    <br/>
                                    Date
                                </th>
                                <th t-if="data['report_type']=='summery'">
                                </th>
                                <th t-if="data['report_type']!='summery'">
                                    رقم القيد

                                    <br/>
                                    Move Number
                                </th>
                                <th>
                                    المدين
                                    <br/>
                                    Debit
                                </th>
                                <th>

                                    الدائن
                                    <br/>
                                    Credit
                                </th>
                                <th>
                                    الرصيد
                                    <br/>
                                    Balance
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="Accounts" t-as="account">
                                <tr style="font-weight: bold;">
                                    <td t-if="data['report_type']!='summery'" colspan="2">
                                        <span style="color: white;" t-esc="'..'"/>
                                        <span t-esc="account['code']"/>
                                        <span t-esc="account['name']"/>
                                    </td>
                                    <td t-if="data['report_type']=='summery'">
                                        <span style="color: white;" t-esc="'..'"/>
                                        <span t-esc="account['code']"/>
                                        <span t-esc="account['name']"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="account['debit']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="account['credit']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="account['balance']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                </tr>

                                <tr t-if="data['report_type']!='summery'" t-foreach="account['move_lines']"
                                    t-as="line">
                                    <td class="text-right">
                                        <span t-esc="line['ldate']"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line['move_name']"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line['debit']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line['credit']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line['balance']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                </tr>

                            </t>
                            <tr style="font-weight: bold;">
                                <td t-if="data['report_type']!='summery'" colspan="2">
                                    <strong>
                                        الإجمالي
                                    </strong>
                                </td>
                                <td t-if="data['report_type']=='summery'">
                                    <strong>
                                        الإجمالي
                                    </strong>
                                </td>
                                <td class="text-right">
                                    <strong>
                                        <span t-esc="total_accounts['total_debit']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </strong>
                                </td>
                                <td class="text-right">
                                    <strong>

                                        <span t-esc="total_accounts['total_credit']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </strong>
                                </td>
                                <strong>
                                    <td class="text-right">

                                        <span t-esc="total_accounts['total_balance']"
                                              t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                    </td>
                                </strong>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
    <report
            id="action_nauss_financial_report"
            model="report.ejad_erp_account.report_nauss_financial"
            string="تقرير مالي"
            report_type="qweb-pdf"
            name="ejad_erp_account.report_nauss_financial"
            file="ejad_erp_account.report_nauss_financial"
            print_report_name="(object.report_name)"


    />
    <!--print_report_name="(object._get_printed_report_name())"-->

</odoo>
