<odoo>
    <template id="account_refund_invoice_report">
        <t t-call="web.html_container">

            <t t-foreach="docs" t-as="o">
                <div class="header">
                    <div></div>
                </div>
                <div class="footer">
                    <div></div>
                </div>
                <t t-call="web.internal_layout">
                    <div class="page">
                        <t t-set="student" t-value="o.invoice_id.invoice_line_ids[0].partner_id1"/>
                        <t t-set="line" t-value="o.invoice_id.invoice_line_ids[0]"/>
                        <table class="table Black_border">
                            <tr>
                                <td style="font-size:14;text-align:center; border: 2px solid Black !important;">
                                    <b>
                                        نموذج طلب استيراد رسوم دراسية
                                    </b>
                                </td>
                            </tr>
                        </table>

                        <table class="table Black_border" style="border: 1px solid Black">

                            <tr style="border-top: 1px solid Black">
                                <td>
                                    <b>اسم الطالب :</b>
                                </td>

                                <td>
                                    <span t-field="student.name"/>
                                </td>
                                <td>
                                    <b>جهة العمل :</b>
                                </td>

                                <td>
