<odoo>
    <record id="res_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='favicon']" position="after">
                <field name="bank_report_footer"/>
                <field name="address_bank_report"/>
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page string="التقارير">
                    <group string="تنسيق تواقيع التقارير">
                        <field name="sign_payment_order_report"/>
                        <field name="sign_refund_invoice_report_reg"/>
                        <field name="sign_refund_invoice_report_finance"/>

                    </group>
                    <group>
                        <field name="inv_report_header" dir="rtl"/>
                        <field name="inv_report_footer" dir="rtl"/>
                    </group>
                </page>

            </xpath>

        </field>
    </record>
    <record id="view_report_signature" model="ir.ui.view">
        <field name="name">report.signature.form</field>
        <field name="model">report.signature</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>

                    <field name="name"/>
                    <field name="signature" dir="rtl"/>

                </group>
            </form>
        </field>
    </record>
    <data noupdate="1">
        <record id="signature_1" model='report.signature'>
            <field name="name">استيراد الرسوم الدراسية - القبول والتسجيل</field>
