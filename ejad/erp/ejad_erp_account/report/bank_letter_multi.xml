<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_bank_letter_multi">
        <t t-call="web.html_container">

            <div class="header">
            </div>
            <div class="footer">
            </div>
            <t t-call="web.internal_layout">
                <div class="page" style="direction:rtl;font-size:14 px">
                    <!--<span t-esc="res_company.name"/>-->

                    <div class="row">
                        <div class="col-4">

                            تاريخ الطباعة:
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                        </div>

                        <div class="col-8" style="float:right;">
                            المكرم/مدير
                            <span t-if="data['bank_id']" t-esc="data['bank_name_id']"/>

                        </div>


                    </div>


                    <br/>
                    <div class="row">
                        <div class="col-2 col-offset-1">
                            <span t-esc="data['date']"/>

                        </div>

                        <div class="col-1">

                            التاريخ:

                        </div>
                        <div class="col-6" style="text-align:right;">
                            السلام عليكم و ورحمة الله وبركاته.


                        </div>


                    </div>
                    <br/>
                    <div class="row" style="text-align:right">

                        <div class="col=11" style="margin-right:15px">
                            تهدي جامعة نايف العربية للعلوم الأمنية أطيب تحياتها لكم وترغب تحويل المبالغ التالية من
                            الحساب الجاري رقم :

                            <span t-esc="data['bank_account_id'][1]"/>
                            إلى التالية أسماؤهم :
                        </div>
                    </div>
                    <br/>
                    <div style="direction:rtl;text-align:right">


                        <table class="table table-condensed"
                               style="border: 1px solid black;text-align:center;font-size: 12px">

                            <thead>
                                <tr>
                                    <th style="text-align:center;font-size: 12px;border-right: 1px solid black;">
                                        ت
                                    </th>
                                    <th style="text-align:center;font-size: 12px;border-right: 1px solid black;">
                                        الرقم
                                    </th>

                                    <th colspan="2"
                                        style="text-align:center;font-size: 12px;border-right: 1px solid black;">
                                        اسم المستفيد - مورد
                                    </th>

                                    <th style="text-align:center;font-size: 12px;border-right: 1px solid black;">
                                        رقم الحساب

                                    </th>

                                    <th style="text-align:center;vertical-align:middle;border-right: 1px solid black;">
                                        اسم البنك
                                    </th>

                                    <th style="text-align:center;vertical-align:middle;border-right: 1px solid black;">
                                        المبلغ
                                    </th>


                                </tr>
                            </thead>
                            <t t-set="seq" t-value="0"/>
                            <t t-foreach="line_ids" t-as="i">
                                <t t-set="seq" t-value="seq+1"/>

                                <tr>
                                    <td style="text-align:center;font-weight: bold;border: 1px solid black;">
                                        <t t-esc="seq"/>
                                    </td>
                                    <td style="text-align:center;font-weight: bold;border: 1px solid black;">
                                        <t t-esc="i.partner_id2.supplier_id"/>
                                    </td>
                                    <td colspan="2"
                                        style="text-align:center;font-weight: bold;border: 1px solid black;">
                                        <span t-esc="i.partner_id2.name"/>

                                    </td>
                                    <td style="text-align:center;font-weight: bold;border: 1px solid black;">
                                        <span t-esc="i.acc_number"/>
                                    </td>

                                    <td style="text-align:center;font-weight: bold;border: 1px solid black;">
                                        <span t-esc="i.bank_id.name"/>
                                    </td>
                                    <td style="text-align:center;font-weight: bold;border: 1px solid black;">
                                        <span style="text-align:right" t-esc="'{0:,.2f}'.format(i.amount)"/>

                                    </td>
                                </tr>
                            </t>

                        </table>

                    </div>
                    <div class="row" style="direction:rtl">
                        <div class="col-3">

                        </div>
                        <div class="col-2">
                            <span t-esc="data['total_amount']"/>

                        </div>
                        <div class="col-3">
                            إجمالي المبلغ المحول :
                        </div>

                        <div class="col-1">
                            <span t-esc="data['line_number']"/>

                        </div>
                        <div class="col-2">
                            عدد المحول لهم :
                        </div>


                    </div>

                    <br/>
                    <div class="row" style="text-align:center">

                        نأمل اتخاذ مايلزم وإشعارنا بما يفيد ذلك، وتقبلوا تحياتنا،،،،،
                    </div>
                    <br/>
                    <div class="row" style="direction:rtl;text-align:right">
                        <div class="col-2">
                        </div>

                        <div class="col-4">
                            رئيس جامعة نايف العربية للعلوم الأمنية
                        </div>
                        <div class="col-3">
                        </div>

                        <div class="col-2">
                            وكيل الجامعة
                        </div>


                    </div>


                </div>
            </t>

        </t>
    </template>
    <report
            id="action_bank_letter_multi_report"
            string="خطاب البنك"
            model="report.ejad_erp_account.report_bank_letter_multi"
            report_type="qweb-pdf"
            file="ejad_erp_account.report_bank_letter_multi"
            name="ejad_erp_account.report_bank_letter_multi"/>


</odoo>
