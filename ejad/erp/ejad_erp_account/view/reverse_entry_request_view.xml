<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_reverse_entry_request_tree" model="ir.ui.view">
            <field name="name">reverse.entry.request.tree</field>
            <field name="model">reverse.entry.request</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Revers Entry Requests">
                    <field name="original_move_id"/>
                    <field name="reversal_move_id"/>
                    <field name="reversal_date"/>
                    <field name="journal_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_reverse_entry_request_form" model="ir.ui.view">
            <field name="name">reverse.entry.request.form</field>
            <field name="model">reverse.entry.request</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reverse Entry Request">
                    <header>
                        <button name="action_submit" type="object" string="Progress" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_accounting_approve" type="object" string="Approve" states="accounting"
                                class="oe_highlight" groups="ejad_erp_account.group_accounting_employee"
                                attrs="{'invisible': [('state', '!=', 'accounting')]}"/>
                        <button name="action_verification" type="object" string="confirm" class="oe_highlight"
                                groups="ejad_erp_account.group_verfication"
                                attrs="{'invisible': [('state', '!=', 'verfication')]}"/>

                        <button name="action_department_approve" type="object" string="Approve"
                                states="account_department"
                                class="oe_highlight" groups="ejad_erp_account.group_department_manager"
                                attrs="{'invisible': [('state', '!=', 'account_department')]}"/>
                        <button name="action_finance_verfifcation_approve" type="object" string="Approve"
                                states="finance_verfifcation" class="oe_highlight"
                                groups="ejad_erp_account.group_finance_monitor"
                                attrs="{'invisible': [('state', '!=', 'finance_verfifcation')]}"/>
                        <button name="action_manager_approve" type="object" string="Approve" states="manager"
                                groups="ejad_erp_account.group_university_manager"
                                class="oe_highlight"/>
                        <button name="action_refuse" type="object" string="Refuse"
                                attrs="{'invisible': [('state', 'in', ['manager','cancelled','done'])]}"

                                class="oe_highlight"/>


                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,accounting,verfication,account_department,finance_verfifcation,manager,done"/>

                    </header>
                    <sheet>
                        <h3>
                            <field name="name"/>
                        </h3>
                        <group>
                            <group>
                                <!--<field name="name"/>-->
                                <field name="original_move_id"/>

                                <field name="reversal_move_id" attrs="{'invisible': [('reversal_move_id','=',False)]}"/>

                            </group>
                            <group>

                                <field name="reversal_date"/>
                                <field name="journal_id"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="action_reverse_entry_request" model="ir.actions.act_window">
            <field name="name">Revers Entry Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reverse.entry.request</field>
            <field name="view_id" ref="view_reverse_entry_request_tree"/>

            <field name="view_mode">tree,form</field>
            <!--<field name="view_type">form</field>-->
        </record>
        <menuitem id="menu_reverse_entry_request"
                  name="Revers Entry Requests"
                  action="action_reverse_entry_request"
                  parent="account.menu_finance_entries_accounting_miscellaneous"
                  sequence="20"/>
    </data>
</openerp>