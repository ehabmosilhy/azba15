<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_invoice_form_inherite2" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date_due']" position="after">
                <field name="is_company" string="جهة" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="uni_id" readonly="1"
                       invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="partner_id1" readonly="0"
                       domain="[('id','child_of',parent.partner_id),('id','!=',parent.partner_id)]"
                       options="{'no_create': True}" string="الطالب/الجهة"
                       invisible="1"/>

                <field name="uni_id" readonly="1"
                       invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{
                    "no_create": True,
                    }
                </attribute>

                <!--<field name="is_company" string="جهة" invisible="1"/>-->
            </xpath>

            <!--<xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">-->
            <!--<field name="partner_id1" readonly="0"-->
            <!--domain="[('id','child_of',parent.partner_id),('id','!=',parent.partner_id)]"-->
            <!--string="الطالب/الجهة"/>-->
            <!--</xpath>-->
            <!--<xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='uom_id']" position="replace">-->
            <!--</xpath>-->


        </field>
    </record>

</odoo>
