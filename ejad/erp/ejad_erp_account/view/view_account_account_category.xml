<odoo>
    <data>
        <record id="account_account_level_tree" model="ir.ui.view">
            <field name="name">account level tree</field>
            <field name="model">account.account.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code" string="code"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="debit" sum="t_debit"/>
                    <field name="credit" sum="t_credit"/>
                    <field name="total" string="Balance" sum="t_balance"/>
                </tree>
            </field>
        </record>

        <record id="account_account_level_form" model="ir.ui.view">
            <field name="name">account level form</field>
            <field name="model">account.account.category</field>
            <field name="arch" type="xml">
                <form>

                    <group>
                        <group>
                            <field name="code" string="Code"/>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="debit"/>
                            <field name="credit"/>
                            <field name="total" string="Balance"/>
                        </group>
                    </group>
                        <field name="account_ids" attrs="{'invisible': [('type', '!=', 'account')]}" nolabel="1"/>
                        <field name="account_level_ids" attrs="{'invisible': [('type', '!=', 'level')]}" nolabel="1" widget="many2many"/>
                </form>
            </field>
        </record>


        <record id="account_account_level_search" model="ir.ui.view">
            <field name="name">account level tree</field>
            <field name="model">account.account.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Level" filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                    <field name="code" string="code"/>
                    <field name="parent_id"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_account_account_level_form">
            <field name="name">Account Levels</field>
            <field name="res_model">account.account.category</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="account_account_level_search"/>
        </record>

        <menuitem parent="account.account_account_menu"
                  id="menu_action_account_account_level"
                  action="action_account_account_level_form"
                  sequence="0"
        />

    </data>
</odoo>