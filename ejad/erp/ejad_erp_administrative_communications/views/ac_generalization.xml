<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ac_generalization_form" model="ir.ui.view">
        <field name="name">ac.generalization.form</field>
        <field name="model">ac.generalization</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send" string="إرسال" type="object"
                            attrs="{'invisible':[('state','!=','draft')]}" class="oe_highlight"/>
                    <button name="action_cancel" string="إلغاء" type="object"
                            attrs="{'invisible':[('state','!=','draft')]}" class="oe_link"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,sent"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                         <button name="action_open_operation" type="object" string="المعاملات " class="oe_stat_button"
                                 icon="fa-file-contract" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                     </div>
                    <h1 class="mt0">
                        <spam string="معاملة مسودة" attrs="{'invisible': [('name', '!=', False)]}"/>
                        <div  attrs="{'invisible': [('name', '=', False)]}">
                            <field name="name" class="oe_inline" readonly="1"/>
                        </div>
                    </h1>
                    <group>
                        <group>
                            <field name="subject"/>
                            <field name="date"/>
                            <field name="type1"/>
                            <!--<field name="country_id" options="{'no_create': True, 'no_open': True}" invisible="1"/>-->
                        </group>
                        <group>
                            <field name="department_sequence"/>
                            <field name="scope"/>
                            <field name="dest" attrs="{'invisible':[('type1','!=','t')]}"/>
                            <field name="auditor" attrs="{'invisible':['|', ('type1','!=','t'), ('dest','!=','auditor')]}"/>
                            <field name="partner_id" attrs="{'invisible':['|', ('type1','!=','t'), ('dest','!=','beneficiary')]}"/>
                            <field name="employee_id" attrs="{'invisible':['|', ('type1','!=','t'), ('dest','!=','emp')]}" options="{'no_create': True, 'no_open': True}"/>
                            <field name="department_ids" attrs="{'invisible':['|', ('type1','!=','t'), ('dest','!=','dept')]}" options="{'no_create': True, 'no_open': True}"/>
                            <field name="ident_no" attrs="{'invisible':['|', ('type1','!=','t'), ('dest','not in',['auditor','emp','beneficiary'])]}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="نص الموضوع">
                            <field name="details" widget="html"/>
                        </page>
                        <page string="الإدارات/ الأقسام" attrs="{'invisible':[('scope', '!=', 'departments')]}">
                            <field name="department_ids" attrs="{'invisible':[('scope', '!=', 'departments')]}"
                                   domain="[('is_ac_eligible','=',True)]">
                                <tree create="true" edit="true" delete="true">
                                    <field name="code"/>
                                    <field name="display_name"/>
                                    <field name="parent_id"/>
                                    <field name="manager_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="المرفقات">
                            <group>
                                <field name="attachments_no"/>
                            </group>
                            <field name="attachment_ids">
                                <tree editable="top">
                                    <field name="name"/>
                                    <field name="attachment_filename" invisible="1"/>
                                    <field widget="binary" height="64" name="attachment_id" filename="attachment_filename"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="attachment_filename" invisible="1"/>
                                        <field widget="binary" height="64" name="attachment_id" filename="attachment_filename"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="ac_generalization_tree" model="ir.ui.view">
        <field name="name">ac.generalization.tree</field>
        <field name="model">ac.generalization</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <!--<field name="department_sequence"/>-->
                <field name="date"/>
                <field name="subject"/>
                <field name="scope"/>
                <field name="type1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_ac_generalization" model="ir.actions.act_window">
        <field name="name">القرارات الداخلية</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ac.generalization</field>
        <field name="limit">80</field>

        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="ac_operation_generalizations" name="القرارات الداخلية" parent="ac_menu" action="action_ac_generalization"
              groups="ejad_erp_administrative_communications.group_operation_settings" sequence="2"/>
</odoo>