<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ac_operation_move_form" model="ir.ui.view">
        <field name="name">ac.operation.form</field>
        <field name="model">ac.operation.move</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <sheet>
                    <h1 class="mt0">
                        <spam string="الاسم" attrs="{'invisible': [('name', '!=', False)]}"/>
                        <div>
                            <field name="name" class="oe_inline"/>
                        </div>
                    </h1>
                    <group>
                        <group>
                            <field name="operation_id"/>
                            <field name="date"/>
                            <field name="type"/>
                            <field name="type_transfer" attrs="{'invisible':[('type','!=','transfer')]}"/>
                            <field name="transfer_guidance" attrs="{'invisible':[('transfer_guidance','=',False)]}"/>
                        </group>
                        <group>
                            <field name="old_employee_id" attrs="{'invisible':[('old_employee_id','=',False)]}" options="{'no_create': True, 'no_open': True}"/>
                            <field name="src_dep_id" attrs="{'invisible':[('src_dep_id','=',False)]}"/>
                            <field name="new_employee_id" attrs="{'invisible':[('new_employee_id','=',False)]}" options="{'no_create': True, 'no_open': True}"/>
                            <field name="dest_dep_id" attrs="{'invisible':[('dest_dep_id','=',False)]}"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="الملاحظات">
                            <field name="notes" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ac_operation_move_tree" model="ir.ui.view">
        <field name="name">ac.operation.move.tree</field>
        <field name="model">ac.operation.move</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="operation_id"/>
                <field name="date"/>
                <field name="type"/>
                <field name="src_name"/>
                <field name="dest_name"/>
                <field name="date_deadline"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record id="ac_operation_move_filter" model="ir.ui.view">
        <field name="name">ac.operation.move.search</field>
        <field name="model">ac.operation.move</field>
        <field name="arch" type="xml">
            <search string="Search Operation Move">
                <field name="operation_id"/>
                <field name="user_id" />
                <group expand="0" string="Group By">
                    <filter name="operation_id" string="المعاملة" context="{'group_by':'operation_id'}"/>
                    <filter name="user_id" string="الموظف المشرف" context="{'group_by':'user_id'}"/>
                    <filter name="src_dep_id" string="الإدارة القديمة" context="{'group_by':'src_dep_id'}"/>
                    <filter name="dest_dep_id" string="الإدارة الجديدة" context="{'group_by':'dest_dep_id'}"/>
                </group>
           </search>
        </field>
    </record>

    <record id="action_ac_operation_move" model="ir.actions.act_window">
        <field name="name">سجل الحركات</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ac.operation.move</field>

        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ac_operation_reporting_menu" name="التقارير" parent="ac_menu" sequence="8"/>
    <menuitem id="ac_operation_move_menu" name="سجل الحركات" parent="ac_operation_reporting_menu"
              action="action_ac_operation_move" sequence="5"/>

</odoo>