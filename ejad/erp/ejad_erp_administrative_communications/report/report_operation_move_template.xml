<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_op_move">
        <t t-call="web.html_container">
            <!--<t t-call="ejad_erp_administrative_communications.nauss_header"/>-->
            <!--<t t-call="ejad_erp_administrative_communications.nauss_footer"/>-->
            <t t-call="web.internal_layout">
                <div class="page" style="border-radius:25px;border:2px solid;padding:10px;height: 1000px;">
                    <br/>
                    <table>
                        <tr>
                            <!--<td class="text-center">
                                <h1><strong><span t-esc="operation.name"/></strong></h1>
                            </td>-->
                            <td class="text-center">
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', operation.name, 400, 100)"
                                     style="width:300px;height:60px;"/>
                            </td>
                        </tr>
                    </table>
                    <br/><br/><br/>
                    <h2>سجل حركات المعاملة</h2>
                    <br/>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">تاريخ الحركة</th>
                                <th class="text-center">النوع</th>
                                <th class="text-center">من</th>
                                <th class="text-center">إلى</th>
                                <th class="text-center">الموظف المشرف</th>
                            </tr>
                        </thead>
                        <tr t-foreach="lines" t-as="line">
                            <td><span t-field="line.date" t-field-options="{&quot;format&quot;: &quot;dd-MM-yyyy&quot;}"/></td>
                            <td><span t-esc="line.type"/></td>
                            <td><span t-esc="line.src_name"/></td>
                            <td><span t-esc="line.dest_name"/></td>
                            <td><span t-esc="line.user_id.name"/></td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <!-- QWeb Reports -->
    <report
        id="action_operation_report_move"
        model="report.ejad_erp_administrative_communications.report_op_move"
        string="تقرير حركات المعاملة"
        report_type="qweb-pdf"
        name="ejad_erp_administrative_communications.report_op_move"
        file="ejad_erp_administrative_communications.report_op_move"
    />

</odoo>
