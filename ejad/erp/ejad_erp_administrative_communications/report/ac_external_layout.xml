<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="nauss_header">
        <div class="header">
            <!--<img src="/ejad_erp_administrative_communications/static/src/img/header.png"-->
                <!--style="font-size:3em;width:100%;max-height: 150px;" />-->
              <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"  style="width:75%;max-height: 150px;"/>

        </div>
    </template>
    <template id="nauss_footer">
        <div class="footer">
            <img src="/ejad_erp_administrative_communications/static/src/img/footer.png"
                 style="width:100%;max-height: 120px;"
            />
        </div>
    </template>
</odoo>