        <record id="access_no_manager" model="res.groups">
            <field name="name">استقبال المعاملات كنائب عن الادارة</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم باستقبال المعاملات والتعامل كنائب عن الادارة</field>
        </record>

        <record id="access_outgoing_same_department" model="res.groups">
            <field name="name">صادر الادارة - كل معاملات نفس الادارة</field>
            <field name="category_id" ref="ac_operation_category"/>
           <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات صادر الإدارة - معاملات الادارة لنفس  القسم فقط</field>
        </record>

        <record id="access_outgoing_parent_department" model="res.groups">
            <field name="name">صادر الادارة - كل معاملات الادارة العليا</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات صادر الإدارة - معاملات الادارة العليا و كل الاقسام التابعة لها</field>
        </record>

        <record id="access_outgoing_child_department" model="res.groups">
            <field name="name">صادر الادارة - كل معاملات صادر الادارات الأدنى</field>
            <field name="category_id" ref="ac_operation_category"/>
             <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات صادر الإدارة - معاملات الادارة و كل الاقسام التابعة لها</field>
        </record>

        <record id="access_outgoing_all_departments_access" model="res.groups">
            <field name="name">صادر الادارة - كل معاملات الادارة - البحث</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات صادر الإدارة - كل معاملات الادارة - البحث</field>
        </record>

        <record id="access_editing_other_informations" model="res.groups">
            <field name="name">صلاحية تعديل المعلومات الأخرى</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم بتفعيل خاصية تعديل المعلومات الأخرى</field>
        </record>

        <record id="access_editing_benefit_note" model="res.groups">
            <field name="name">صلاحية تعديل الإفادة</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم بتفعيل خاصية تعديل الإفادة</field>
        </record>

        <record id="access_allow_marking" model="res.groups">
            <field name="name">صلاحية التأشير على المعاملات</field>
            <field name="category_id" ref="ac_operation_category"/>
           <field name="comment">تمنح صلاحية للمستخدم برؤية الزرار الخاص بالتأشير على المعاملات</field>
        </record>

        <record id="access_allow_dis_marking" model="res.groups">
            <field name="name">صلاحية الغاء التأشير على المعاملات</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية الزرار الخاص بالغاء التأشير على المعاملات</field>
        </record>

        <record id="access_users_viewer" model="res.groups">
            <field name="name">المستخدمين المطلعين على المعاملة</field>
            <field name="category_id" ref="ac_operation_category"/>
             <field name="comment">تمنح صلاحية للمستخدم برؤية الجزء الخاص بالمستخدمين المطلعين على المعاملة فى بروفايل الوارد العام و الصادر العام و صادر ووارد الادارة</field>
        </record>

        <record id="access_related_operations" model="res.groups">
            <field name="name">المعاملات ذات العلاقة</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية الجزء الخاص بالمعاملات ذات العلاقة فى بروفايل الوارد العام</field>
        </record>

        <record id="access_reopen_operations" model="res.groups">
            <field name="name">صلاحية إعادة فتح المعاملة</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية الزرار الخاص بإعادة فتح المعاملة</field>
        </record>

        <record id="access_following_operations" model="res.groups">
            <field name="name">صلاحية متابعة المعاملات</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية الزرار الخاص بمتابعة المعاملات</field>
        </record>

        <record id="access_read_all_attachment" model="res.groups">
            <field name="name">صلاحية الاطلاع على مرفق كل المعاملات</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية سجلات المرفقات الخاصة بكل المعاملات</field>
        </record>

        <record id="access_sign_operations" model="res.groups">
            <field name="name">خاصية التوقيع على المعاملات</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية الزرار الخاص بالتوقيع على المعاملات</field>
        </record>

    </data>
</odoo>
