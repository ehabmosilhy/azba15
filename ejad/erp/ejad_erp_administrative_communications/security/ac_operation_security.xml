<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="ac_operation_category" model="ir.module.category">
            <field name="name">الاتصالات الادارية</field>
        </record>

        <record id="group_administrative_communications_menu" model="res.groups">
            <field name="name">قائمة الاتصالات الإدارية</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية برنامج الاتصالات الإدارية</field>
        </record>
        <record id="group_general_incoming" model="res.groups">
            <field name="name">الوارد العام</field>
            <field name="category_id" ref="ac_operation_category"/>
              <field name="comment">تمنح صلاحية للمستخدم برؤية قائمة الوارد العام</field>
        </record>

        <record id="group_general_outgoing" model="res.groups">
            <field name="name">الصادر العام</field>
            <field name="category_id" ref="ac_operation_category"/>
              <field name="comment">تمنح صلاحية للمستخدم برؤية قائمة الصادر العام</field>
        </record>

        <record id="group_department_incoming" model="res.groups">
            <field name="name">وارد الإدارة</field>
            <field name="category_id" ref="ac_operation_category"/>
              <field name="comment">تمنح صلاحية للمستخدم برؤية قائمة وارد الإدارة</field>
        </record>

        <record id="group_department_outgoing" model="res.groups">
            <field name="name">صادر الإدارة</field>
            <field name="category_id" ref="ac_operation_category"/>
              <field name="comment">تمنح صلاحية للمستخدم برؤية قائمة صادر الإدارة</field>
        </record>

        <record id="group_operation_settings" model="res.groups">
            <field name="name">إعدادات الإتصالات الإدارية</field>
            <field name="category_id" ref="ac_operation_category"/>
              <field name="comment">تمنح صلاحية للمستخدم برؤية قائمة الإعدادات - قائمة القرارات الداخلية - الجزء الخاص بمدخل البيانات فى بروفايل الصادر و الوارد - الجزء الخاص بالاتصالات الادارية فى بروفايل العميل</field>
        </record>

        <record id="group_operation_archive" model="res.groups">
            <field name="name">الأرشفة اليدوية</field>
            <field name="category_id" ref="ac_operation_category"/>
             <field name="comment">تمنح صلاحية للمستخدم بأرشفة السجلات اي جعل السجلات غير نشطة على النظام</field>
        </record>

        <record id="group_operation_all_department" model="res.groups">
            <field name="name">صلاحية احالة الى كل الادارات</field>
            <field name="category_id" ref="ac_operation_category"/>
              <field name="comment">تمنح صلاحية للمستخدم برؤية سجلات كل الادارات</field>
        </record>

        <record id="group_operation_own_department" model="res.groups">
            <field name="name">صلاحية احالة الى ادارة الموظف</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات الإدارة التابعة للموظف فقط</field>
        </record>

        <record id="group_operation_up_department" model="res.groups">
            <field name="name">صلاحية احالة الى الادارة العليا للموظف</field>
            <field name="category_id" ref="ac_operation_category"/>
             <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات الإدارة للموظف والادارات العليا لها</field>
        </record>

        <record id="group_operation_down_department" model="res.groups">
            <field name="name">صلاحية احالة الى الادارات الأدنى للموظف</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات الإدارة للموظف والادارات الأدنى لها</field>
        </record>

        <record id="group_operation_level_department" model="res.groups">
            <field name="name">صلاحية احالة الى الادارات في نفس المستوى</field>
            <field name="category_id" ref="ac_operation_category"/>
           <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات الإدارة التابعة للموظف</field>
        </record>

        <record id="group_operation_first_department" model="res.groups">
            <field name="name">صلاحية احالة الى اول مستوى فقط</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات الإدارة والادارات التابعة لها</field>
        </record>

        <record id="access_all_g_inbox" model="res.groups">
            <field name="name">قراءة كل معاملات الوارد العام</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات معاملات الوارد العام</field>
        </record>

        <record id="access_all_g_outbox" model="res.groups">
            <field name="name">قراءة كل معاملات الصادر العام</field>
            <field name="category_id" ref="ac_operation_category"/>
            <field name="comment">تمنح صلاحية للمستخدم برؤية كل سجلات معاملات الصادر العام</field>
        </record>

        <record id="operation_access_rule" model="ir.rule">
            <field name="name">Operation Access Rule</field>
            <field name="model_id" ref="model_ac_operation"/>
            <field name="domain_force">[('message_partner_ids', 'in', [user.partner_id.id])]</field>
        </record>

