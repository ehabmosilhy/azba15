<?xml version="1.0"?>
<odoo>
        <record id="wiz_operation_save_view_form" model="ir.ui.view">
            <field name="name">wiz.ac.operation.save.form</field>
            <field name="model">wiz.ac.operation.save</field>
            <field name="arch" type="xml">
                <form string="إضافة تعليق">
                    <separator string="حفظ المعاملة"/>
                    <group>
                        <field name="place_id" widget="selection"/>
                        <field name="notes"/>
                    </group>


                    <footer>
                        <button name="action_save_operation" string="تأكيد" type="object" class="btn btn-sm btn-primary"/>
                        <button string="إلغاء" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="ac_operation_save_action" model="ir.actions.act_window">
            <field name="name">حفظ المعاملة</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wiz.ac.operation.save</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wiz_operation_save_view_form"/>
            <field name="target">new</field>
        </record>
</odoo>
