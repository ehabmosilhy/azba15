<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ac_reporting_receive_statement_view" model="ir.ui.view">
        <field name="name">تقارير كشف الإستلام</field>
        <field name="model">wiz.ac.receive.report</field>
        <field name="arch" type="xml">
            <form string="Choose your date">
                <group>
                    <group>
                        <field name="report_type"/>
                        <field name="external_partner_ids" widget="many2many_tags" attrs="{'invisible':[('report_type', '!=', 'global_inbox')]}"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <notebook>
                    <page string="المعاملات">
                        <field name="ac_operation_ids" context="{'tree_view_ref': 'ejad_erp_administrative_communications.ac_operation_tree'}"/>
                    </page>
                </notebook>
                <!--<group><field name="advanced"/></group>-->
                <!--<group attrs="{'invisible':[('advanced', '=', False)]}">-->
                    <!--<field name="external_party_id"/>-->
                    <!--<field name="department_id"/>-->
                    <!--<field name="assigned_employee_id"/>-->
                <!--</group>-->
                <footer>
                    <button name="check_report" string="طباعة" type="object" class="btn-primary"/>
                    <button string="إلغاء" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_ac_reporting_receive_statement_view" model="ir.actions.act_window">
        <field name="name">تقارير كشف الإستلام</field>
        <field name="res_model">wiz.ac.receive.report</field>

        <field name="view_mode">form</field>
        <field name="view_id" ref="view_ac_reporting_receive_statement_view"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_ac_reporting_receive_statement_view" name="تقارير كشف الإستلام" parent="ac_operation_reporting_menu"
              action="action_ac_reporting_receive_statement_view" sequence="0"/>
</odoo>

