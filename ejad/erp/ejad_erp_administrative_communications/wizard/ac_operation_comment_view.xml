<?xml version="1.0"?>
<odoo>
        <record id="wiz_operation_comment_view_form" model="ir.ui.view">
            <field name="name">wiz.ac.operation.comment.form</field>
            <field name="model">wiz.ac.operation.comment</field>
            <field name="arch" type="xml">
                <form string="إضافة تعليق">
                    <separator string="التعليق"/>
                    <group>
                        <field name="comment" widget="html"/>
                    </group>


                    <footer>
                        <button name="action_add_comment" string="حفظ" type="object" class="btn btn-sm btn-primary"/>
                        <button string="إلغاء" class="btn btn-sm btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="ac_operation_comment_action" model="ir.actions.act_window">
            <field name="name">إضافة تعليق</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wiz.ac.operation.comment</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wiz_operation_comment_view_form"/>
            <field name="target">new</field>
        </record>
</odoo>
