<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="ac_mail_template" model="mail.template">
            <field name="name">معاملة اتصالات ادارية</field>
            <field name="model_id" ref="ejad_erp_administrative_communications.model_ac_operation"/>
            <field name="email_from">${(object.env.user.email or '')|safe}</field>
            <field name="subject">${object.subject}</field>
            <field name="body_html" type="html">
                <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                    <p>
                        رقم : ${object.name}
                    </p>
                </div>
            </field>
<!--            <field name="user_signature" eval="False"/>-->
        </record>

    </data>

    <data noupdate="1">

        <record id="operation_method_hand" model="ac.operation.receive.method">
            <field name="name">مناولة باليد</field>
            <field name="code">ac_method_hand</field>
            <field name="active">True</field>
        </record>

        <record id="operation_method_sa_mail" model="ac.operation.receive.method">
            <field name="name">البريد السعودي</field>
            <field name="code">ac_method_sa_mail</field>
            <field name="active">True</field>
        </record>

        <record id="operation_method_fax" model="ac.operation.receive.method">
            <field name="name">الفاكس</field>
            <field name="code">ac_method_fax</field>
            <field name="active">True</field>
        </record>

        <record id="operation_method_email" model="ac.operation.receive.method">
            <field name="name">البريد الالكتروني</field>
            <field name="code">ac_method_email</field>
            <field name="active">True</field>
        </record>

        <!--  ########################################  -->

        <record id="operation_nature_khitab" model="ac.operation.nature">
            <field name="name">خطاب</field>
            <field name="code">ac_nature_kh</field>
            <field name="active">True</field>
        </record>

        <record id="operation_nature_operation" model="ac.operation.nature">
            <field name="name">معاملة</field>
            <field name="code">ac_nature_op</field>
            <field name="active">True</field>
        </record>

        <record id="operation_nature_letter" model="ac.operation.nature">
            <field name="name">برقية</field>
            <field name="code">ac_nature_lt</field>
            <field name="active">True</field>
        </record>

        <record id="operation_nature_order" model="ac.operation.nature">
            <field name="name">قرار</field>
            <field name="code">ac_nature_or</field>
            <field name="active">True</field>
        </record>

        <record id="operation_nature_generalization" model="ac.operation.nature">
            <field name="name">تعميم</field>
            <field name="code">ac_nature_gn</field>
            <field name="active">True</field>
        </record>

        <!--  ########################################  -->

        <record id="transfer_guidance_1" model="ac.transfer.guidance">
            <field name="name">للإطلاع</field>
            <field name="code">tr_gu_01</field>
            <field name="active">True</field>
        </record>

        <record id="transfer_guidance_2" model="ac.transfer.guidance">
            <field name="name">للإحالة</field>
            <field name="code">tr_gu_02</field>
            <field name="active">True</field>
        </record>

        <record id="transfer_guidance_3" model="ac.transfer.guidance">
            <field name="name">للتنفيذ</field>
            <field name="code">tr_gu_03</field>
            <field name="active">True</field>
        </record>

        <record id="transfer_guidance_4" model="ac.transfer.guidance">
            <field name="name">للتعليق و الإفادة</field>
            <field name="code">tr_gu_04</field>
            <field name="active">True</field>
        </record>

        <record id="transfer_guidance_5" model="ac.transfer.guidance">
            <field name="name">للتصدير</field>
            <field name="code">tr_gu_05</field>
            <field name="active">True</field>
        </record>

        <!--  ########################################  -->

        <record id="ac_archive_cron" model="ir.cron">
            <field name="name">الأرشفة التلقائية لعمليات الإتصالات الإدارية</field>
            <field name="model_id" ref="model_ac_operation"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">model.action_cron_archive()</field>
            <field name="doall">True</field>
            <field name="active">True</field>
        </record>

        <record id="ac_notification_cron" model="ir.cron">
            <field name="name">الاشعارات على معاملات الاتصالات الادارية</field>
            <field name="model_id" ref="model_ac_operation"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">model.action_cron_notification()</field>
            <field name="doall">True</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
