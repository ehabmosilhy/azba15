<odoo>

    <template id="login_layout_no_db" inherit_id="web.login_layout" name="Login Layout">
        <xpath expr="//div[1]/div[1]" position="before">
            <t t-set="disable_database_manager" t-value="1"/>
            <t t-set="disable_footer" t-value="1"/>

        </xpath>
    </template>
    <template id="web_login_background_template" inherit_id="web.layout">
        <xpath expr="//head" position="inside">

            <style type="text/css">
                body.container {
                background: none;
                background-image: url('/ejad_erp_base/static/img/background.jpg');
                background-size: cover;
                }
            </style>
        </xpath>
<!--        <xpath expr="//link[@rel='shortcut icon']" position="replace">-->
<!--            <link rel="icon" href="/web_favicon/favicon" />-->
<!--        </xpath>-->
        <xpath expr="//title" position="replace">
                <title t-esc="title or 'ERP'"/>
        </xpath>
    </template>





</odoo>
