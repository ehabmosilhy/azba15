<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="ejad_auth_web_login" inherit_id="web.login" name="Ejad SMS Login">
        <xpath expr="//input[@id='password']/.." position="after">
            <div class="form-group field-otp-option" style="display:none; color: white; font-weight: bold;">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="btn btn-success">
                            <i class="fa fa-envelope"></i>
                        </span>
                    </div>
                    <input name="codeSms" id="codeSms"
                           placeholder="أدخل رمز التثبت"
                           class="form-control" maxlength="30"
                           type="text"/>
                </div>
                <p id="otplogincounter" style="color: white;text-align: right;padding-right: 0; padding-bottom: 15px;"/>
            </div>
        </xpath>
        <xpath expr="//button[@type='submit']/.." position="before">
            <div id="nextBtnDiv" class="col-md-6" style="padding-right: 0; display: none;">
                <button type="button" value="التالي" class="btn btn-primary wk_next_btn btn-block"
                        style="width: 100%; height: unset; margin-right: 0 !important;">التالي</button>
            </div>
            <div id="nextBtnDiv2" class="col-md-6" style="padding-right: 0; display: none;">
                <button type="button" value="خول" class="btn btn-success btn-block" id="nextBtn2"
                        style="width: 100%; height: unset; margin-right: 0 !important;">دخول</button>
            </div>
        </xpath>
    </template>
</odoo>
